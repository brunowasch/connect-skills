<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Connect Skills - Áreas de Interesse</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/shared/style.css">
  <link rel="icon" type="image/png" href="/img/CONNECT.png?v=2">
  <style>
    :root { --nav-h: 0px !important; }
    body#home { padding-top: 0 !important; }
    .skill-pill {
      cursor: pointer;
      transition: all 0.2s ease;
      border: 1px solid #dee2e6;
      color: #495057;
      background-color: #f8f9fa;
      font-size: 0.9rem;
      user-select: none;
    }
    
    .skill-pill:hover {
      background-color: #e9ecef;
      transform: translateY(-1px);
    }

    /* Estado Selecionado (Roxo estilo Connect Skills) */
    .skill-pill.selected {
      background-color: #6f42c1; /* Roxo bootstrap ou a cor da sua marca */
      border-color: #6f42c1;
      color: white;
    }

    .skills-container {
      max-height: 400px;
      overflow-y: auto;
      scrollbar-width: thin;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-white">
  
  <%- include('../partials/header') %>
  <%- include('../partials/flash-messages') %>

  <main class="flex-grow-1 d-flex flex-column justify-content-center align-items-center px-3 py-5">
    
    <div class="w-100" style="max-width: 600px;">
      <h1 class="text-center mb-2">Quais suas especialidades?</h1>
      <p class="text-center text-muted mb-4">Selecione as tecnologias e habilidades que você domina.</p>

      <form action="/candidatos/cadastro/areas" method="POST" id="formAreas" onsubmit="prepararEnvio(event)">
    
          <div class="input-group mb-4">
              <span class="input-group-text bg-white border-end-0 rounded-start-pill">
                  <i class="bi bi-search"></i>
              </span>
              <input type="text" id="buscaSkill" class="form-control border-start-0 rounded-end-pill" placeholder="Pesquisar habilidade..." onkeyup="filtrarSkills()">
          </div>

          <div class="d-flex flex-wrap gap-2 justify-content-center mb-4 skills-container p-2">
              <% habilidades.forEach(function(skill) { %>
              <div class="badge rounded-pill py-2 px-3 fw-normal skill-pill" 
                  style="cursor: pointer; border: 1px solid #ccc; color: #333;"
                  data-value="<%= skill %>"
                  onclick="toggleSkill(this)">
                  <%= skill %>
              </div>
              <% }); %>
          </div>
          
          <input type="hidden" name="areasSelecionadas" id="inputAreasSelecionadas">

          <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary rounded-pill py-2 fw-bold">
                  Concluir Cadastro <i class="bi bi-arrow-right ms-2"></i>
              </button>
          </div>
      </form>
    </div>

  </main>

  <script>
    // 1. Estado da aplicação
    const selecionadas = new Set();
    const inputBusca = document.getElementById('buscaSkill');
    const pills = document.querySelectorAll('.skill-pill');
    const inputHidden = document.getElementById('inputAreasSelecionadas');

    // 2. Filtro de busca (Habilidades)
    if (inputBusca) {
      inputBusca.addEventListener('input', (e) => {
        const termo = e.target.value.toLowerCase();
        pills.forEach(pill => {
          const texto = pill.textContent.toLowerCase();
          // Usa d-none do bootstrap para esconder
          pill.classList.toggle('d-none', !texto.includes(termo));
        });
      });
    }

    // 3. Função de Seleção (Alternar entre selecionado ou não)
    function toggleSkill(elemento) {
      const valor = elemento.getAttribute('data-value');
      
      if (selecionadas.has(valor)) {
        selecionadas.delete(valor);
        elemento.classList.remove('selected', 'bg-primary', 'text-white');
      } else {
        // Limite opcional: se quiser limitar a 5 áreas, por exemplo:
        // if (selecionadas.size >= 5) return alert('Máximo de 5 áreas');
        
        selecionadas.add(valor);
        elemento.classList.add('selected', 'bg-primary', 'text-white');
      }
      
      // Atualiza o input hidden em tempo real para garantir que o dado esteja lá
      const arrayFinal = Array.from(selecionadas);
      inputHidden.value = JSON.stringify(arrayFinal);
      console.log("Áreas selecionadas:", inputHidden.value);
    }

    // 4. Preparar o JSON e validar antes de enviar
    function prepararEnvio(e) {
      if (selecionadas.size === 0) {
        e.preventDefault(); // Impede o recarregamento da página
        alert('Por favor, selecione pelo menos uma área de interesse.');
        return false;
      }

      // Garante que o valor final seja um JSON válido no input
      const arrayFinal = Array.from(selecionadas);
      inputHidden.value = JSON.stringify(arrayFinal);
      
      // Se chegou aqui, o formulário será enviado normalmente para o controller
      return true;
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
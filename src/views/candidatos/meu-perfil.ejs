<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Connect Skills</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/shared/style.css">
  <link rel="icon" type="image/png" href="/img/CONNECT.png?v=2">

  <style>
    .perfil-foto { width: 160px; height: 160px; object-fit: cover; }
    @media (max-width: 576px) { .perfil-foto { width: 120px; height: 120px; } }
    .perfil-card { max-width: 1000px; margin: 0 auto; border-radius: 1rem; }
    .nome-perfil { font-size: 1.25rem; font-weight: 600; }
    .meta-perfil { color: #6c757d; }
    .perfil-link { color: #000; text-decoration: none; transition: color .2s; word-break: break-word; }
    .perfil-link:hover { color: #0d6efd; text-decoration: underline; }
    .icon-sm { font-size: 1rem; vertical-align: -2px; }
    .list-group-item { padding-top: .6rem; padding-bottom: .6rem; }
    .section-title { font-size: 1.15rem; font-weight: 600; display: flex; align-items: center; gap: .5rem; margin-bottom: .5rem; }
    .perfil-header { row-gap: 1rem; }
  </style>
</head>
<body class="bg-light">
  <%- include('../partials/header-candidato') %>
  <main class="container pb-5">
  <% if (sucesso) { %>
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
      <%= sucesso %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
  <% } %>
  <% if (erro) { %>
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
      <%= erro %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
  <% } %>

  <h2 class="mb-4 mt-4">Meu perfil</h2>
   <section class="card border-1 shadow-sm rounded-4 p-3 p-md-4 mb-4">
    <div class="row align-items-center perfil-header">
      <div class="col-12 col-md-auto text-center">
        <% if (fotoPerfil) { %>
          <img src="<%= fotoPerfil %>" alt="Foto de perfil" class="perfil-foto rounded-circle border border-dark">
        <% } else { %>
          <img src="/img/avatar.png" alt="Avatar padrão" class="perfil-foto rounded-circle border border-dark">
        <% } %>
      </div>

      <div class="col-12 col-md">
        <div class="d-flex flex-column flex-md-row align-items-center align-items-md-start justify-content-between gap-2">
          <div class="text-center text-md-start">
            <div class="nome-perfil"><%= candidato.nome || 'Usuário' %> <%= candidato.sobrenome || '' %></div>
            <div class="meta-perfil mt-1">
              <i class="bi bi-geo-alt-fill icon-sm me-1"></i>
              <span><%= localidade %></span>
            </div>

            <% if (ddd && numeroFormatado) { %>
              <div class="meta-perfil">
                <i class="bi bi-telephone icon-sm me-1"></i>
                <span><%= ddi ? ddi + ' ' : '' %>(<%= ddd %>) <%= numeroFormatado %></span>
              </div>
            <% } else if (candidato.telefone) { %>
              <div class="meta-perfil">
                <i class="bi bi-telephone icon-sm me-1"></i>
                <span><%= candidato.telefone %></span>
              </div>
            <% } else { %>
              <div class="meta-perfil">
                <i class="bi bi-telephone icon-sm me-1"></i>
                <span>Telefone não informado</span>
              </div>
            <% } %>

            <div class="meta-perfil">
              <i class="bi bi-calendar-event icon-sm me-1"></i>
              <span>
                Data de nascimento:
                <% if (candidato.data_nascimento) { %>
                  <%= new Date(candidato.data_nascimento).toLocaleDateString('pt-BR') %>
                <% } else { %>
                  não informada
                <% } %>
              </span>
            </div>
          </div>

          <div class="d-flex align-items-center gap-2 ms-md-auto perfil-actions">
            <a href="/candidato/editar-perfil" class="btn btn-primary btn-sm">
              <i class="bi bi-pencil-square me-1"></i> Editar perfil
            </a>

          <button class="btn btn-outline-secondary btn-sm"
                  data-candidato-id="<%= candidato?.id %>"
                  title="Copiar link público do perfil do candidato"
                  onclick="copiarLinkPerfilPublicoCandidato(this)">
            <i class="bi bi-link-45deg"></i>
          </button>
          <small id="msgCopiadoCandidato" class="text-success" style="display:none;">Copiado!</small>
        </div>
      </div>
    </div>

    <div class="row gy-4 mt-3">
      <div class="col-md-6 col-12">
        <div class="d-flex justify-content-between align-items-center">
          <div class="section-title">
            <i class="bi bi-star-fill text-warning icon-sm"></i>
            Áreas de interesse
          </div>
          <a href="/candidato/editar-areas" class="text-decoration-none" title="Editar áreas">
            <i class="bi bi-pencil-square"></i>
          </a>
        </div>
        <ul class="list-group list-group-flush">
          <% if (areas && areas.length) { %>
            <% areas.forEach(area => { %>
              <li class="list-group-item"><%= area %></li>
            <% }) %>
          <% } else { %>
            <li class="list-group-item text-muted">Nenhuma área selecionada</li>
          <% } %>
        </ul>
      </div>

      <div class="col-md-6 col-12">
        <div class="d-flex justify-content-between align-items-center">
          <div class="section-title">
            <i class="bi bi-link-45deg text-primary icon-sm"></i>
            Links do perfil
          </div>
          <a href="/candidato/editar-perfil" class="text-decoration-none" title="Editar links">
            <i class="bi bi-pencil-square"></i>
          </a>
        </div>
        <ul class="list-group list-group-flush">
          <% if (links && links.length) { %>
            <% links.forEach(link => { %>
              <li class="list-group-item d-flex align-items-center gap-4">
                <i class="bi bi-box-arrow-up-right icon-sm"></i>
                <a href="<%= link.url %>" target="_blank" rel="noopener noreferrer" class="perfil-link"><%= link.url %></a>
              </li>
            <% }) %>
          <% } else { %>
            <li class="list-group-item text-muted">Nenhum link adicionado</li>
          <% } %>
        </ul>
      </div>

      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
          <div class="section-title">
            <i class="bi bi-paperclip icon-sm"></i>
            Anexos
          </div>
          <a href="/candidato/editar-perfil" class="text-decoration-none" title="Gerenciar anexos">
            <i class="bi bi-pencil-square"></i>
          </a>
        </div>

        <div class="table-responsive">
          <table class="table align-middle">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Tamanho</th>
                <th>Enviado em</th>
                <th class="text-end">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% if (!anexos || !anexos.length) { %>
                <tr><td colspan="5" class="text-muted">Nenhum anexo</td></tr>
              <% } else { %>
                <% anexos.forEach(a => { %>
                  <tr>
                    <td class="text-truncate" style="max-width: 360px;"><%= a.nome %></td>
                    <td><code><%= a.mime %></code></td>
                    <td><%= humanFileSize(a.tamanho) %></td>
                    <td><%= new Date(a.criadoEm).toLocaleString('pt-BR') %></td>
                    <td class="text-end">
                    <a href="/candidato/anexos/<%= a.id %>/abrir" target="_blank" rel="noopener" class="btn btn-sm btn-outline-primary">
                      Abrir
                    </a>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  function copiarLinkPerfilPublicoCandidato(btn) {
    const candidatoId = btn.getAttribute('data-candidato-id');
    const url = `${window.location.origin}/candidatos/perfil/${candidatoId}`;

    if (navigator.clipboard && navigator.clipboard.writeText) {
      navigator.clipboard.writeText(url)
        .then(() => mostrarMsgCopiadoCandidato())
        .catch(() => fallbackCopyCandidato(url));
    } else {
      fallbackCopyCandidato(url);
    }
  }

  function fallbackCopyCandidato(texto) {
    try {
      const input = document.createElement('input');
      input.value = texto;
      document.body.appendChild(input);
      input.select();
      document.execCommand('copy');
      document.body.removeChild(input);
      mostrarMsgCopiadoCandidato();
    } catch (_) {
      alert('Copie o link: ' + texto);
    }
  }

  function mostrarMsgCopiadoCandidato() {
    const msg = document.getElementById('msgCopiadoCandidato');
    if (!msg) return;
    msg.style.display = 'inline';
    setTimeout(() => (msg.style.display = 'none'), 1500);
  }
</script>
</body>
</html>
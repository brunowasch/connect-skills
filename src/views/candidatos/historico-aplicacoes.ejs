<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Connect Skills</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="icon" type="image/png" href="/img/CONNECT.png?v=2">
  <link rel="stylesheet" href="/css/shared/style.css">

  <style>
    .page-actions{position:sticky; top:0; z-index:1020; border-bottom:1px solid rgba(0,0,0,.05)}
    .badge-status{text-transform:capitalize;}
    .card-job{border-radius:1rem;}
    .pill{display:inline-block;padding:.35rem .6rem;border-radius:999px;background:rgba(0,0,0,.05);margin:.125rem .25rem 0 0;font-size:.85rem}
    .resposta-item{background:rgba(0,0,0,.03);border-radius:.5rem;padding:.5rem .75rem}
    .empresa-foto{width:64px;height:64px;object-fit:cover;border:1px solid rgba(0,0,0,.08)}
    @media (max-width: 576px){ .empresa-foto{width:56px;height:56px} }

    .btn-link-muted {
      padding: 0;
      border: 0;
      background: transparent;
      color: #6c757d;
      text-decoration: none;
    }
    .btn-link-muted:hover { color: #495057; text-decoration: underline; }
    .input-clear-btn {
      border: 0;
      background: transparent;
      padding: 0 .5rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .input-clear-btn:hover { opacity: .8; }
  </style>
</head>
<body class="bg-light">
  <%- include('../partials/header-candidato'); %>

  <main class="container py-3" style="margin-top:72px;">
    <div class="d-flex align-items-center justify-content-between mt-1 mb-3">
      <h2 class="mb-0 mt-4">Histórico de vagas aplicadas</h2>
    </div>
    <form class="bg-white rounded-4 p-3 shadow-sm border mb-4" method="GET" action="/candidatos/vagas/historico" id="form-filtros">
      <div class="row g-2 align-items-center">
        <div class="col-12 col-md">
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input
              type="text"
              name="q"
              class="form-control"
              placeholder="Buscar por cargo, descrição, empresa ou área..."
              value="<%= (typeof filtros !== 'undefined' && filtros.q) ? filtros.q : '' %>"
              autocomplete="off"
              id="campo-busca"
            >
            <button
              type="button"
              id="clear-busca"
              class="input-clear-btn <%= (typeof filtros !== 'undefined' && filtros.q && filtros.q.trim() ? '' : 'd-none') %>"
              aria-label="Limpar busca"
              title="Limpar busca"
            >
              <i class="bi bi-x-lg"></i>
            </button>
          </div>
        </div>
        <div class="col-12 col-md-auto">
          <select name="ordenar" class="form-select" id="select-ordenar">
            <option value="recentes" <%= filtros?.ordenar==='recentes'?'selected':'' %>>Mais recentes</option>
            <option value="antigos" <%= filtros?.ordenar==='antigos'?'selected':'' %>>Mais antigos</option>
            <option value="mais_salario" <%= filtros?.ordenar==='mais_salario'?'selected':'' %>>Maior salário</option>
            <option value="menos_salario" <%= filtros?.ordenar==='menos_salario'?'selected':'' %>>Menor salário</option>
          </select>
        </div>
        <div class="col-12 col-md-auto d-flex justify-content-end">
          <a href="/candidatos/vagas/historico" class="btn-link-muted d-inline-flex align-items-center gap-1">
            <i class="bi bi-x-circle"></i> Limpar tudo
          </a>
        </div>
      </div>
    </form>

    <div class="page-actions py-2 mb-3">
      <div class="container px-0 d-flex gap-2">
        <a href="/candidatos/vagas" class="btn btn-outline-secondary">
          <i class="bi bi-stars me-1"></i> Vagas recomendadas
        </a>
        <a href="/candidatos/vagas/historico" class="btn btn-primary">
          <i class="bi bi-clock-history me-1"></i> Histórico de vagas aplicadas
        </a>
      </div>
    </div>

    <% if (!items || !items.length) { %>
      <div class="alert alert-light border">
        Você ainda não aplicou para nenhuma vaga (ou nada corresponde ao filtro). Veja <a href="/candidatos/vagas">vagas recomendadas</a>.
      </div>
    <% } %>

    <div class="vstack gap-3">
      <% (items || []).forEach((it) => { %>
        <div class="card card-job shadow-sm">
          <div class="card-body">
            <!-- Cabeçalho -->
            <div class="d-flex align-items-start justify-content-between gap-3">
              <div class="d-flex align-items-start gap-3">
                <a href="/empresa/perfil/<%= it.empresa.id %>">
                  <img src="<%= it.empresa.foto || '/img/empresa-padrao.png' %>" alt="Logo da empresa" class="empresa-foto rounded-circle">
                </a>
                <div>
                  <div class="d-flex align-items-center gap-2 flex-wrap">
                    <h2 class="h5 mb-0"><%= it.vaga.cargo %></h2>
                    <span class="badge bg-<%= it.vaga.statusAtual === 'fechada' ? 'secondary' : 'success' %> badge-status">
                      <%= it.vaga.statusAtual %>
                    </span>
                  </div>
                  <div class="text-muted small mt-1">
                    <span class="me-2"><i class="bi bi-buildings"></i> <%= it.empresa.nome %></span>
                    <% if (it.empresa.localidade) { %>
                      <span class="me-2"><i class="bi bi-geo-alt"></i> <%= it.empresa.localidade %></span>
                    <% } %>
                    <span class="me-2"><i class="bi bi-calendar-event"></i> Publicado em: <%= it.vaga.publicadoEmBR %></span>
                  </div>
                </div>
              </div>
              <div>
                <a class="btn btn-sm btn-outline-primary" href="/candidatos/vagas/<%= it.vaga.id %>">
                  Ver detalhes
                </a>
              </div>
            </div>

            <!-- Meta da vaga -->
            <div class="row mt-3 g-3">
              <div class="col-md-3">
                <div class="small text-muted">Tipo de trabalho</div>
                <div><strong><%= it.vaga.tipo || '—' %></strong></div>
              </div>
              <div class="col-md-3">
                <div class="small text-muted">Escala</div>
                <div><strong><%= it.vaga.escala || '—' %></strong></div>
              </div>
              <div class="col-md-3">
                <div class="small text-muted">Dias presenciais / Home office</div>
                <div>
                  <strong>
                    <%= (it.vaga.diasPresenciais ?? '—') %> / <%= (it.vaga.diasHomeOffice ?? '—') %>
                  </strong>
                </div>
              </div>
              <div class="col-md-3">
                <div class="small text-muted">Salário</div>
                <div>
                  <strong>
                    <%= it.vaga.salario != null ? (it.vaga.moeda ? (it.vaga.moeda + ' ') : '') + it.vaga.salario : '—' %>
                  </strong>
                </div>
              </div>
            </div>

            <!-- Áreas e benefícios -->
            <div class="mt-3">
              <% if (it.vaga.areas?.length) { %>
                <div class="small text-muted mb-1">Áreas de atuação</div>
                <div>
                  <% it.vaga.areas.forEach(a => { %>
                    <span class="pill"><i class="bi bi-tag me-1"></i><%= a %></span>
                  <% }); %>
                </div>
              <% } %>
              <% if (it.vaga.beneficios?.length) { %>
                <div class="small text-muted mt-3 mb-1">Benefícios</div>
                <div>
                  <% it.vaga.beneficios.forEach(b => { %>
                    <span class="pill"><i class="bi bi-gift me-1"></i><%= b %></span>
                  <% }); %>
                </div>
              <% } %>
            </div>

            <!-- Descrição -->
            <% if (it.vaga.descricao) { %>
              <div class="mt-3">
                <div class="small text-muted mb-1">Descrição</div>
                <div class="border rounded p-2" style="white-space:pre-wrap"><%= it.vaga.descricao %></div>
              </div>
            <% } %>

            <!-- Respostas do candidato -->
            <div class="mt-4">
              <div class="d-flex align-items-center justify-content-between">
                <h3 class="h6 mb-0"><i class="bi bi-chat-square-quote me-1"></i> Suas respostas</h3>
              </div>
              <div class="collapse show mt-2" id="resp-<%= it.idAvaliacao %>">
                <% if (!it.respostas.length) { %>
                  <div class="text-muted">—</div>
                <% } else { %>
                  <div class="vstack gap-2">
                    <% it.respostas.forEach((r) => { %>
                      <div class="resposta-item">
                        <% if (r.pergunta) { %><div class="fw-semibold"><%= r.pergunta %></div><% } %>
                        <% if (r.resposta) { %><div class="text-body"><%= r.resposta %></div><% } %>
                      </div>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>

          </div>
        </div>
      <% }); %>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    (function(){
      const form = document.getElementById('form-filtros');
      const input = document.getElementById('campo-busca');
      const clearBtn = document.getElementById('clear-busca');
      const ordenar = document.getElementById('select-ordenar');

      input.addEventListener('keydown', e => { if (e.key==='Enter') e.preventDefault(); });
      let t;
      input.addEventListener('input', () => {
        clearBtn.classList.toggle('d-none', !(input.value && input.value.trim()));
        clearTimeout(t); t = setTimeout(()=>form.requestSubmit(),400);
      });
      clearBtn.addEventListener('click', ()=>{ input.value=''; clearBtn.classList.add('d-none'); form.requestSubmit(); });
      ordenar.addEventListener('change', ()=>form.requestSubmit());
    })();
  </script>
</body>
</html>

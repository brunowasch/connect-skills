<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Connect Skills</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/shared/style.css">
  <link rel="icon" type="image/png" href="/img/CONNECT.png?v=2">
  <style>
    .btn-link-muted {
      padding: 0;
      border: 0;
      background: transparent;
      color: #6c757d;
      text-decoration: none;
    }
    .btn-link-muted:hover { color: #495057; text-decoration: underline; }
    .input-clear-btn {
      border: 0;
      background: transparent;
      padding: 0 .5rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .input-clear-btn:hover { opacity: .8; }
    .perfil-logo { width: 80px; height: 80px; object-fit: cover; }
    .card-vaga { border: 1px solid rgba(0,0,0,.06); }
    .badge-outline { background: #fff; border: 1px solid rgba(0,0,0,.1); }
    @media (max-width: 576px) {
      .perfil-logo { width: 64px; height: 64px; }
    }
    .bloco-ia { margin-top: 1rem; display: none; }
  </style>
</head>
<body class="bg-light">
  <%- include('../partials/header-candidato') %>
  <%- include('../partials/flash-messages') %>

  <%
    const tipoMap = {
      Presencial:   'Presencial',
      Home_Office:  'Home Office',
      H_brido:      'Híbrido'
    };

    const _areas = (typeof areas !== 'undefined' && Array.isArray(areas))
      ? areas
      : (Array.isArray(candidato?.areas) ? candidato.areas : []);
  %>

  <main class="container py-5">
    <div class="d-flex align-items-center justify-content-between mt-1 mb-3">
      <h2 class="mb-0 mt-4">Vagas recomendadas</h2>
    </div>

    <% if (!_areas || _areas.length < 3) { %>
      <div class="alert alert-warning d-flex justify-content-between align-items-center gap-3 rounded-4 shadow-sm border">
        <div class="d-flex align-items-center gap-2">
          <i class="bi bi-exclamation-triangle-fill"></i>
          <div>
            <div class="fw-semibold">Você ainda não selecionou áreas de interesse.</div>
            <small class="text-muted">Defina até 3 áreas para melhorar suas recomendações.</small>
          </div>
        </div>
        <a href="/candidato/editar-areas" class="btn btn-sm btn-primary">
          Selecionar áreas
        </a>
      </div>
    <% } %>
    <form class="bg-white rounded-4 p-3 shadow-sm border mb-4" method="GET" action="/candidatos/vagas" id="form-filtros">
      <div class="row g-2 align-items-center">
        <div class="col-12 col-md">
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input
              type="text"
              name="q"
              class="form-control"
              placeholder="Buscar por cargo, descrição, empresa ou área..."
              value="<%= (typeof filtros !== 'undefined' && filtros.q) ? filtros.q : '' %>"
              autocomplete="off"
              id="campo-busca"
            >
            <button
              type="button"
              id="clear-busca"
              class="input-clear-btn <%= (typeof filtros !== 'undefined' && filtros.q && filtros.q.trim() ? '' : 'd-none') %>"
              aria-label="Limpar busca"
              title="Limpar busca"
            >
              <i class="bi bi-x-lg"></i>
            </button>
          </div>
        </div>
        <div class="col-12 col-md-auto">
          <select name="ordenar" class="form-select" id="select-ordenar">
            <option value="recentes" <%= filtros?.ordenar==='recentes'?'selected':'' %>>Mais recentes</option>
            <option value="antigos" <%= filtros?.ordenar==='antigos'?'selected':'' %>>Mais antigos</option>
            <option value="mais_salario" <%= filtros?.ordenar==='mais_salario'?'selected':'' %>>Maior salário</option>
            <option value="menos_salario" <%= filtros?.ordenar==='menos_salario'?'selected':'' %>>Menor salário</option>
          </select>
        </div>
        <div class="col-12 col-md-auto d-flex justify-content-end">
          <a href="/candidatos/vagas" class="btn-link-muted d-inline-flex align-items-center gap-1">
            <i class="bi bi-x-circle"></i> Limpar tudo
          </a>
        </div>
      </div>
    </form>
    <div class="page-actions py-2 mb-3" style="position:sticky; top:0; z-index:1020; border-bottom:1px solid rgba(0,0,0,.05)">
      <div class="container px-0 d-flex gap-2">
        <a href="/candidatos/vagas" class="btn btn-primary">
          <i class="bi bi-stars me-1"></i> Vagas recomendadas
        </a>
        <a href="/candidatos/vagas/historico" class="btn btn-outline-secondary">
          <i class="bi bi-clock-history me-1"></i> Histórico de vagas aplicadas
        </a>
      </div>
    </div>

    <% if (!vagas || vagas.length === 0) { %>
      <div class="alert alert-light text-center">Nenhuma vaga encontrada com a busca/ordem atual.</div>
    <% } else { %>
      <% vagas.forEach(vaga => { %>
        <div class="bg-white rounded-4 p-4 mb-4 shadow-sm position-relative card-vaga border" data-vaga-id="<%= vaga.id %>">
          <div class="d-flex gap-4 align-items-start flex-wrap">
            <a href="/empresa/perfil/<%= vaga.empresa?.id %>">
              <img src="<%= vaga.empresa?.foto_perfil || '/img/empresa-padrao.png' %>"
                   alt="Logo da empresa"
                   class="rounded-circle border perfil-logo">
            </a>
            <div class="flex-grow-1">
              <h5 class="mb-0 fw-bold"><%= vaga.empresa?.nome_empresa %></h5>
              <p class="mb-1 text-muted">
                <%= [vaga.empresa?.cidade, vaga.empresa?.estado, vaga.empresa?.pais].filter(Boolean).join(', ') || 'Localidade não informada' %>
              </p>
              <p class="mb-1 mt-2 fw-semibold"><%= vaga.cargo %></p>
              <div class="d-flex flex-wrap gap-2 mt-2">
                <span class="badge rounded-pill text-bg-light border">
                  <i class="bi bi-geo-alt me-1"></i><%= tipoMap[vaga.tipo_local_trabalho] %>
                </span>
                <%
                  const dataCriacao = new Date(vaga.created_at);
                  const dataValida = !isNaN(dataCriacao.getTime());
                %>
                <span class="badge rounded-pill text-bg-light border">
                  <i class="bi bi-calendar-event me-1"></i>
                  <%= dataValida ? `Publicado em ${dataCriacao.toLocaleDateString('pt-BR')}` : 'Data não disponível' %>
                </span>
                <% if (vaga.salario) { %>
                  <span class="badge rounded-pill text-bg-light border">
                    <i class="bi bi-cash-coin me-1"></i>
                    <%= Number(vaga.salario).toLocaleString('pt-BR', { style: 'currency', currency: vaga.moeda || 'BRL' }) %>
                  </span>
                <% } %>
              </div>
              <span class="badge rounded-pill text-bg-light border mt-2">
                <i class="bi bi-briefcase me-1"></i>
                <%
                  const vinculoMap = {
                    Estagio: 'Estágio', CLT_Tempo_Integral: 'CLT (tempo integral)', CLT_Meio_Periodo: 'CLT (meio período)',
                    Trainee: 'Trainee', Aprendiz: 'Aprendiz', PJ: 'PJ', Freelancer_Autonomo: 'Freelancer/Autônomo', Temporario: 'Temporário'
                  };
                %>
                <%= vinculoMap[vaga.vinculo_empregaticio] || '—' %>
              </span>
              <p class="mt-3"><%= vaga.descricao %></p>
              <% if (vaga.vaga_area?.length) { %>
                <small class="text-muted">Áreas de atuação:</small>
                <div class="d-flex flex-wrap gap-1 mt-2">
                  <% vaga.vaga_area.forEach(rel => { %>
                    <span class="badge rounded-pill text-primary border border-primary bg-white"><%= rel.area_interesse.nome %></span>
                  <% }) %>
                </div>
              <% } %>
              <% if (vaga.vaga_arquivo?.length) { %>
                <div class="mt-2">
                  <small class="text-muted d-block mb-1">Anexos da vaga:</small>
                  <div class="d-flex flex-wrap gap-2">
                    <% vaga.vaga_arquivo.slice(0, 3).forEach(ax => { %>
                      <a
                        href="/empresa/public/vaga/anexos/<%= ax.id %>/abrir"
                        target="_blank" rel="noopener"
                        class="badge rounded-pill text-bg-light border badge-outline"
                        title="Abrir anexo no navegador">
                        <i class="bi bi-paperclip me-1"></i><%= ax.nome.length > 22 ? ax.nome.slice(0,22) + '…' : ax.nome %>
                      </a>
                    <% }) %>
                    <% if (vaga.vaga_arquivo.length > 3) { %>
                      <span class="badge rounded-pill text-bg-light border">
                        +<%= vaga.vaga_arquivo.length - 3 %> anexo(s)
                      </span>
                    <% } %>
                  </div>
                </div>
              <% } %>
              <% if (vaga.vaga_link?.length) { %>
                <div class="mt-2">
                  <small class="text-muted d-block mb-1">Links da vaga:</small>
                  <div class="d-flex flex-wrap gap-2">
                    <% vaga.vaga_link.slice(0,3).forEach(lk => { %>
                      <a href="<%= lk.url %>" target="_blank" rel="noopener"
                        class="badge rounded-pill text-bg-light border badge-outline"
                        title="<%= lk.titulo %>">
                        <i class="bi bi-link-45deg me-1"></i>
                        <%= lk.titulo.length > 24 ? lk.titulo.slice(0,24)+'…' : lk.titulo %>
                      </a>
                    <% }) %>
                    <% if (vaga.vaga_link.length > 3) { %>
                      <span class="badge rounded-pill text-bg-light border badge-outline">
                        +<%= vaga.vaga_link.length - 3 %> link(s)
                      </span>
                    <% } %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>

          <hr class="mt-4 mb-3">

          <div class="d-flex justify-content-between align-items-center flex-wrap gap-2" data-vaga-id="<%= vaga.id %>">
            <a href="/candidatos/vagas/<%= vaga.id %>" class="btn btn-outline-primary">
              <i class="bi bi-eye me-1"></i> Ver detalhes
            </a>
            <button class="btn btn-primary btn-entrevista" type="button">
              <i class="bi bi-send me-1"></i> Iniciar entrevista com IA
            </button>
          </div>

          <div class="bloco-ia border rounded p-3 bg-light mt-3 d-none">
            <h6 class="fw-semibold mb-3">Questionário da vaga</h6>
            <%
              const perguntas = (vaga.pergunta || '').split('\n').map(s => s.trim()).filter(Boolean);
            %>
            <% if (perguntas.length) { %>
              <% perguntas.forEach((q, idx) => { %>
                <div class="mb-2">
                  <label class="form-label"><%= (idx+1) + '. ' + q %></label>
                  <input type="text" class="form-control resposta-ia-item" placeholder="Sua resposta...">
                </div>
              <% }) %>
            <% } else { %>
              <textarea class="form-control resposta-ia" rows="3" placeholder="Digite sua resposta..."></textarea>
            <% } %>
            <div class="d-flex gap-2 mt-3">
              <button class="btn btn-success btn-avaliar" data-vaga-id="<%= vaga.id %>"> <i class="bi bi-clipboard2-check"></i> Analisar compatibilidade</button>
              <button class="btn btn-outline-secondary fechar-ia">Ocultar</button>
            </div>
            <div class="mt-3 resultados-ia"></div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    (function(){
      const form = document.getElementById('form-filtros');
      const input = document.getElementById('campo-busca');
      const clearBtn = document.getElementById('clear-busca');
      const ordenar = document.getElementById('select-ordenar');

      input.addEventListener('keydown', e => { if (e.key==='Enter') e.preventDefault(); });
      let t;
      input.addEventListener('input', () => {
        clearBtn.classList.toggle('d-none', !(input.value && input.value.trim()));
        clearTimeout(t); t = setTimeout(()=>form.requestSubmit(),400);
      });
      clearBtn.addEventListener('click', ()=>{ input.value=''; clearBtn.classList.add('d-none'); form.requestSubmit(); });
      ordenar.addEventListener('change', ()=>form.requestSubmit());
      document.addEventListener('click', e=>{
        if(e.target.closest('.btn-entrevista')){
          const card=e.target.closest('.card-vaga');
          card.querySelector('.bloco-ia').style.display='block';
        }
        if(e.target.closest('.fechar-ia')){
          const card=e.target.closest('.card-vaga');
          card.querySelector('.bloco-ia').style.display='none';
        }
      });
    })();
  </script>
<script>
document.addEventListener('click', async (ev) => {
  // Abrir bloco e carregar perguntas
  const startBtn = ev.target.closest('.btn-entrevista');
  if (startBtn) {
    const wrapper = startBtn.closest('[data-vaga-id]');
    const vagaId = Number(wrapper?.dataset?.vagaId);
    if (!vagaId) return;

    const bloco = wrapper.parentElement.querySelector('.bloco-ia');
    if (!bloco) return;

    bloco.classList.remove('d-none');
    bloco.innerHTML = '<div class="text-muted">Carregando perguntas…</div>';

    try {
      const resp = await fetch(`/candidato/vagas/${vagaId}/perguntas-disc`);
      const data = await resp.json();
      if (!data.ok) throw new Error(data.error || 'Falha ao carregar perguntas');
      const perguntas = data.questions || [];

      bloco.innerHTML = `
        <h6 class="fw-semibold mb-3">Questionário da vaga</h6>
        <form class="form-disc" data-vaga="${vagaId}">
          ${perguntas.map((q, idx) => `
            <div class="mb-2">
              <label class="form-label">${idx + 1}. ${q}</label>
              <textarea class="form-control" rows="3" name="a_${idx}" placeholder="Sua resposta..." required></textarea>
              <input type="hidden" name="q_${idx}" value="${q.replace(/"/g,'&quot;')}">
            </div>
          `).join('')}
          <div class="d-flex gap-2 mt-3">
            <button class="btn btn-success btn-avaliar" type="submit">
              <i class="bi bi-clipboard2-check"></i> Analisar compatibilidade
            </button>
            <button class="btn btn-outline-secondary fechar-ia" type="button">Ocultar</button>
          </div>
          <div class="mt-3 resultados-ia"></div>
        </form>
      `;
    } catch (e) {
      bloco.innerHTML = `<div class="text-danger">Erro: ${e.message || e}</div>`;
    }
  }

  // Ocultar bloco
  const closeBtn = ev.target.closest('.fechar-ia');
  if (closeBtn) {
    const bloco = closeBtn.closest('.bloco-ia');
    if (bloco) bloco.classList.add('d-none');
  }
});

// Envio do formulário para análise
document.addEventListener('submit', async (ev) => {
  const form = ev.target.closest('.form-disc');
  if (!form) return;
  ev.preventDefault();

  const vagaId = Number(form.getAttribute('data-vaga'));
  const respostas = Array.from(form.querySelectorAll('textarea[name^="a_"]'));
  const qa = respostas.map((ta, i) => {
    const q = form.querySelector(`input[name="q_${i}"]`)?.value || '';
    return { question: q, answer: ta.value.trim() };
  });

  if (!qa.length || qa.some(x => !x.answer)) {
    alert('Preencha suas respostas antes de analisar.');
    return;
  }

  const btn = form.querySelector('.btn-avaliar');
  const out = form.querySelector('.resultados-ia');
  btn.disabled = true;

  try {
  const resp = await fetch(`/candidato/vaga/${vagaId}/avaliar`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ qa })
  });

  // Tolerante a text/plain ou JSON
  const raw = await resp.text();
  let data;
  try { data = JSON.parse(raw); } catch { data = raw; }

  if (!resp.ok) {
    const msg = (data && data.error) || `Erro ${resp.status}`;
    throw new Error(msg);
  }

  // Normaliza formatos:
  const r = (data && typeof data === 'object') ? data : {};
  const hasDisc =
    typeof r.score === 'number' ||
    ['score_D','score_I','score_S','score_C'].some(k => typeof r[k] === 'number');

  if (!hasDisc) {
    // Mantém seu comportamento anterior quando não há campos DISC
    out.innerHTML = `<div class="alert alert-success">Análise enviada com sucesso!</div>`;
  } else {
    const sG = Number(r.score)   || 0;
    const sD = Number(r.score_D) || 0;
    const sI = Number(r.score_I) || 0;
    const sS = Number(r.score_S) || 0;
    const sC = Number(r.score_C) || 0;

    const skills = Array.isArray(r.matchedSkills) ? r.matchedSkills : [];
    const suggs  = Array.isArray(r.suggestions)  ? r.suggestions  : [];
    const expl   = r.explanation || '';

    out.innerHTML = '<div class="alert alert-success">Suas respostas foram enviadas com sucesso!</div>';
  }
} catch (e) {
  out.innerHTML = `<div class="alert alert-danger">Erro: ${e.message || e}</div>`;
  } finally {
    btn.disabled = false;
  }
});
</script>
</body>
</html>

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= empresa.nome_empresa %> | Connect Skills</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/img/CONNECT.png?v=2">
  <style>
    body { background-color: #e9ecef; font-family: 'Montserrat', sans-serif; }
    .perfil-card { background: #fff; border-radius: 12px; box-shadow: 0 0 10px rgba(0,0,0,0.06); }
    .vaga-card { background: #fff; border-radius: 12px; box-shadow: 0 0 10px rgba(0,0,0,0.05); padding: 24px; }
    .preview-badge { position: sticky; top: 0; z-index: 1030; border-radius: 0; font-weight: 600; }
    .bloco-ia { margin-top: 1rem; margin-bottom: 2rem; }
    .resultados-ia { margin-top: 1rem; padding-bottom: 1rem; }
    .ia-header { display:flex; align-items:center; justify-content:space-between; gap:.75rem; position:sticky; top:0; background:#f8f9fa; padding:.25rem 0 .5rem; z-index:1; }
    .perfil-link { color:#212529; text-decoration:none; transition:color .3s ease; }
    .perfil-link:hover { color:#0d6efd; text-decoration:underline; }
    .file-row { display:flex; align-items:center; justify-content:space-between; gap:.75rem; }
    .file-meta { font-size:.9rem; color:#6c757d; }
    .badge-outline { background:#fff; border:1px solid rgba(0,0,0,.1); }
  </style>
</head>

<body class="bg-light" data-pode-testar="<%= (typeof podeTestar !== 'undefined' && podeTestar) ? '1' : '0' %>">
  <% if (typeof include !== 'undefined') { %>
    <%- include('../partials/flash-messages') %>
  <% } %>

  <% const somentePreview = !(typeof podeTestar !== 'undefined' && podeTestar); %>
  <% if (somentePreview) { %>
    <div class="alert alert-warning text-center preview-badge mb-0">
      <i class="bi bi-eye"></i> Pré-visualização — entre como <strong>candidato</strong> para responder o questionário e ver sua compatibilidade.
      <a href="/login" class="alert-link ms-1">Fazer login</a>
    </div>
  <% } %>

  <main class="container py-5">
    <div class="perfil-card p-4 mb-4">
      <div class="d-flex flex-column flex-md-row align-items-center">
        <img src="<%= empresa.foto_perfil || '/img/avatar.png' %>" class="rounded-circle me-md-4 mb-3 mb-md-0" alt="Foto da Empresa" width="100" height="100">
        <div>
          <h2><%= empresa.nome_empresa %></h2>
          <p class="mb-1"><%= empresa.descricao %></p>
          <%
            const normalizar = function(s){ return s ? s.normalize('NFD').replace(/[̀-ͯ]/g,'').toLowerCase().trim() : ''; };
            const partes = [empresa.cidade, empresa.estado, empresa.pais].filter(Boolean);
            const uniq = []; const seen = new Set();
            for (var i=0;i<partes.length;i++){ var p = partes[i]; var n = normalizar(p); if(!seen.has(n)){ seen.add(n); uniq.push(p.trim()); } }
            const localidade = uniq.join(', ');
          %>
          <p class="text-muted mb-0"><%= localidade || 'Localidade não informada' %></p>
          <small class="text-muted"><%= empresa.telefone || '' %></small>
        </div>
      </div>
    </div>

    <% const linksArr   = Array.isArray(links)   ? links   : (Array.isArray(empresa?.empresa_link)    ? empresa.empresa_link    : []); %>
    <% const anexosArr  = Array.isArray(anexos)  ? anexos  : (Array.isArray(empresa?.empresa_arquivo) ? empresa.empresa_arquivo : []); %>

    <section class="perfil-card p-4 mb-4">
      <h4><i class="bi bi-link-45deg"></i> Links do Perfil</h4>
      <hr>
      <% if (!linksArr.length) { %>
        <div class="text-muted">Nenhum link informado.</div>
      <% } else { %>
        <ul class="list-group list-group-flush">
          <% linksArr.forEach(link => { 
              let url = (link?.url || '').trim();
              if (!url) return;
              if (!/^https?:\/\//i.test(url)) url = 'https://' + url;
          %>
            <li class="list-group-item d-flex align-items-center gap-3">
              <i class="bi bi-box-arrow-up-right"></i>
              <a href="<%= url %>" target="_blank" rel="noopener noreferrer" class="perfil-link">
                <%= link?.url %>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </section>

    <section class="perfil-card p-4 mb-4">
      <h4><i class="bi bi-paperclip"></i> Arquivos do Perfil</h4>
      <hr>
      <% if (!anexosArr.length) { %>
        <div class="text-muted">Nenhum arquivo anexado.</div>
      <% } else { %>
        <div class="vstack gap-2">
          <% anexosArr.forEach(function(f){ 
               const url = (f?.url || '').trim();
               if (!url) return;
               const nome = (f?.nome || 'Arquivo');
               const mime = (f?.mime || '');
               const tam  = (typeof f?.tamanho === 'number' ? f.tamanho : null);
          %>
            <div class="file-row p-2 border rounded">
              <div class="d-flex align-items-center gap-2">
                <i class="bi bi-file-earmark fs-5"></i>
                <div>
                  <div class="fw-semibold"><%= nome %></div>
                  <div class="file-meta">
                    <%= mime || '' %> — <%= tam ? (tam/1024).toFixed(1) + ' KB' : '—' %>
                  </div>
                </div>
              </div>
                <a href="/public/empresa/anexos/<%= ax.id %>/abrir" target="_blank" rel="noopener" class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-box-arrow-up-right"></i> Abrir
                </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>

    <h4 class="mb-3">Vagas Publicadas</h4>

    <% if (!vagasPublicadas || !vagasPublicadas.length) { %>
      <div class="alert alert-secondary">Nenhuma vaga publicada por esta empresa.</div>
    <% } else { %>
      <% var tipoMap = { Presencial:'Presencial', Home_Office:'Home Office', H_brido:'Híbrido' }; %>
      <% var vinculoMap = {
           Estagio: 'Estágio',
           CLT_Tempo_Integral: 'CLT (tempo integral)',
           CLT_Meio_Periodo: 'CLT (meio período)',
           Trainee: 'Trainee',
           Aprendiz: 'Aprendiz',
           PJ: 'PJ (Pessoa Jurídica)',
           Freelancer_Autonomo: 'Freelancer / Autônomo',
           Temporario: 'Temporário'
         }; %>
      <% vagasPublicadas.forEach(function(vaga){ %>
        <% const desabilitarIa = !!vaga.ja_aplicou; %>
        <div class="vaga-card mb-4" data-vaga-id="<%= vaga.id %>" data-vaga-hid="<%= vaga._hid %>"> 
          <h5 class="fw-bold">
            <%= vaga.cargo %>
            <% if (desabilitarIa) { %>
              <span class="badge rounded-pill text-bg-secondary ms-2">Já aplicada</span>
            <% } %>
          </h5>

          <% if (vaga.vaga_area && vaga.vaga_area.length > 0) { %>
            <p class="mb-1"><strong>Áreas de atuação:</strong>
              <%= vaga.vaga_area.map(function(v){ return v.area_interesse.nome; }).join(', ') %>
            </p>
          <% } %>

          <% if (vaga.tipo_local_trabalho || vaga.escala_trabalho) { %>
            <p class="mb-1">
              <% if (vaga.tipo_local_trabalho) { %><strong><%= tipoMap[vaga.tipo_local_trabalho] %></strong><br><% } %>
              <% if (vaga.escala_trabalho) { %>Escala: <%= vaga.escala_trabalho %><% } %>
            </p>
          <% } %>

          <% if (vaga.dias_presenciais || vaga.dias_home_office) { %>
            <p class="mb-1">
              <% if (vaga.dias_presenciais) { %>Dias presenciais: <%= vaga.dias_presenciais %><br><% } %>
              <% if (vaga.dias_home_office) { %>Dias home office: <%= vaga.dias_home_office %><% } %>
            </p>
          <% } %>

          <% if (vaga.salario) { %>
            <p class="mb-1">
              <strong>Salário:</strong>
              <%= Number(vaga.salario || 0).toLocaleString('pt-BR', { style: 'currency', currency: vaga.moeda || 'BRL' }) %>
            </p>
          <% } %>

          <!-- NOVO: Vínculo empregatício -->
          <% if (vaga.vinculo_empregaticio) { %>
            <p class="mb-1">
              <strong>Vínculo:</strong> <%= vinculoMap[vaga.vinculo_empregaticio] || '—' %>
            </p>
          <% } %>

          <% if (vaga.beneficio && vaga.beneficio.trim()) { %>
            <p class="mb-1"><strong>Benefícios:</strong>
              <%= vaga.beneficio.split(',').map(function(b){ return b.trim(); }).filter(Boolean).join(', ') %>
            </p>
          <% } %>

          <% if (vaga.beneficio_outro) { %>
            <p class="mb-1"><strong>Outro benefício:</strong> <%= vaga.beneficio_outro %></p>
          <% } %>

          <% if (vaga.descricao) { %>
            <p class="mb-1"><strong>Descrição:</strong> <%= vaga.descricao %></p>
          <% } %>

          <% if (vaga.vaga_link && vaga.vaga_link.length) { %>
            <div class="mt-2">
              <small class="text-muted d-block mb-1">Links da vaga:</small>
              <div class="d-flex flex-wrap gap-2">
                <% vaga.vaga_link.slice(0, 4).forEach(lk => { %>
                  <a href="<%= /^https?:\/\//i.test(lk.url) ? lk.url : ('https://' + lk.url) %>"
                    target="_blank" rel="noopener"
                    class="badge rounded-pill text-bg-light border badge-outline"
                    title="<%= lk.titulo %>">
                    <i class="bi bi-link-45deg me-1"></i>
                    <%= (lk.titulo || lk.url).length > 24 ? (lk.titulo || lk.url).slice(0,24) + '...' : (lk.titulo || lk.url) %>
                  </a>
                <% }) %>
                <% if (vaga.vaga_link.length > 4) { %>
                  <span class="badge rounded-pill text-bg-light border badge-outline">
                    +<%= vaga.vaga_link.length - 4 %> link(s)
                  </span>
                <% } %>
              </div>
            </div>
          <% } %>

          <% if (vaga.vaga_arquivo && vaga.vaga_arquivo.length) { %>
            <div class="mt-2">
              <small class="text-muted d-block mb-1">Anexos da vaga:</small>
              <div class="d-flex flex-wrap gap-2">
                <% vaga.vaga_arquivo.slice(0, 4).forEach(ax => { %>
                  <a href="/empresa/public/vaga/anexos/<%= ax.id %>/abrir"
                    target="_blank" rel="noopener"
                    class="badge rounded-pill text-bg-light border badge-outline"
                    title="Abrir <%= ax.nome %> no navegador">
                    <i class="bi bi-paperclip me-1"></i>
                    <%= ax.nome && ax.nome.length > 24 ? ax.nome.slice(0,24) + '...' : (ax.nome || 'arquivo') %>
                  </a>
                <% }) %>
                <% if (vaga.vaga_arquivo.length > 4) { %>
                  <span class="badge rounded-pill text-bg-light border badge-outline">
                    +<%= vaga.vaga_arquivo.length - 4 %> anexo(s)
                  </span>
                <% } %>
              </div>
            </div>
          <% } %>

          <div class="mt-3 text-end">
            <button
              class="btn <%= somentePreview ? 'btn-outline-secondary' : (desabilitarIa ? 'btn-secondary' : 'btn-outline-primary') %> fw-bold btn-entrevista"
              type="button"
              <%= desabilitarIa ? 'disabled aria-disabled="true" title="Você já se candidatou a esta vaga. A entrevista com IA está desabilitada."' : '' %>>
              <i class="bi bi-send me-1"></i>
              <%= desabilitarIa ? 'Entrevista com IA indisponível' : ((vaga.respostas_previas && vaga.respostas_previas.length) ? 'Ver teste da IA' : 'Iniciar teste com a IA') %>
            </button>

            <% if (desabilitarIa) { %>
              <div class="mt-2 small text-muted">Você já se candidatou a esta vaga.</div>
            <% } %>
            <% if (somentePreview) { %>
              <a class="btn btn-primary ms-2" href="/login">Fazer login</a>
            <% } %>
          </div>

          <div class="border rounded p-3 bg-light bloco-ia d-none">
            <div class="ia-header">
              <div class="alert alert-secondary small mb-0 py-1 px-2">
                <strong>Questionário da vaga</strong>
              </div>
            </div>
            <div class="conteudo-ia"></div>
          </div>
        </div>
      <% }); %>
    <% } %>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    (function(){
      var podeTestar = document.body.getAttribute('data-pode-testar') === '1';

      function showWarning(bloco, conteudo) {
        bloco.classList.remove('d-none');
        conteudo.innerHTML =
          '<div class="alert alert-warning mb-0">Entre como candidato para responder o questionário e analisar sua compatibilidade. ' +
          '<a href="/login" class="alert-link">Fazer login</a></div>';
      }

      document.addEventListener('click', function(ev){
        var startBtn = ev.target.closest('.btn-entrevista');
        if (!startBtn) return;

        var card = startBtn.closest('[data-vaga-id]');
        var vagaId = Number(card && card.dataset && card.dataset.vagaId);
        if (!vagaId) return;

        var bloco = card.querySelector('.bloco-ia');
        var conteudo = card.querySelector('.bloco-ia .conteudo-ia');
        if (!bloco || !conteudo) return;

        if (!podeTestar) {
          showWarning(bloco, conteudo);
          return;
        }

        bloco.classList.remove('d-none');
        conteudo.innerHTML = '<div class="text-muted">Carregando perguntas...</div>';

        fetch('/candidato/vagas/' + vagaId + '/perguntas-disc', { credentials: 'same-origin' })
          .then(function(resp){
            var ct = resp.headers.get('content-type') || '';
            if (ct.indexOf('application/json') === -1) {
              return resp.text().then(function(t){
                throw new Error('Resposta não JSON (possível redirecionamento).');
              });
            }
            return resp.json();
          })
          .then(function(data){
            if (!data.ok) throw new Error(data.error || 'Falha ao carregar perguntas');
            var perguntas = Array.isArray(data.questions) ? data.questions : [];

            var html = '';
            html += '<form class="form-disc" data-vaga="' + vagaId + '">';
            for (var i = 0; i < perguntas.length; i++) {
              var q = String(perguntas[i] || '');
              html += '<div class="mb-2">';
              html +=   '<label class="form-label">' + (i + 1) + '. ' + q + '</label>';
              html +=   '<textarea class="form-control" rows="3" name="a_' + i + '" placeholder="Sua resposta..." required></textarea>';
              html +=   '<input type="hidden" name="q_' + i + '" value="' + q.replace(/"/g,'&quot;') + '">';
              html += '</div>';
            }
            html += '<div class="d-flex gap-2 mt-3">';
            html +=   '<button class="btn btn-success btn-avaliar" type="submit">';
            html +=     '<i class="bi bi-clipboard2-check"></i> Analisar compatibilidade';
            html +=   '</button>';
            html +=   '<button class="btn btn-outline-secondary fechar-ia" type="button">Ocultar</button>';
            html += '</div>';
            html += '<div class="mt-3 resultados-ia"></div>';
            html += '</form>';

            conteudo.innerHTML = html;
          })
          .catch(function(e){
            conteudo.innerHTML = '<div class="text-danger">Erro: ' + (e.message || e) + '</div>';
          });
      });

      document.addEventListener('click', function(ev){
        var closeBtn = ev.target.closest('.fechar-ia');
        if (!closeBtn) return;
        var bloco = closeBtn.closest('.bloco-ia');
        if (bloco) bloco.classList.add('d-none');
      });

      document.addEventListener('submit', function(ev){
        var form = ev.target.closest('.form-disc');
        if (!form) return;
        ev.preventDefault();

        var vagaId = Number(form.getAttribute('data-vaga'));
        var respostas = Array.prototype.slice.call(form.querySelectorAll('textarea[name^="a_"]'));
        var qa = respostas.map(function(ta, i){
          var qEl = form.querySelector('input[name="q_' + i + '"]');
          var q = qEl ? qEl.value : '';
          return { question: q, answer: ta.value.trim() };
        });

        if (!qa.length || qa.some(function(x){ return !x.answer; })) {
          alert('Preencha suas respostas antes de analisar.');
          return;
        }

        var btn = form.querySelector('.btn-avaliar');
        var out = form.querySelector('.resultados-ia');
        btn.disabled = true;
        out.innerHTML = '<div class="text-muted">Analisando compatibilidade...</div>';

        fetch('/candidato/vaga/' + vagaId + '/avaliar', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({ qa: qa })
        })
        .then(function(resp){
          var ct = resp.headers.get('content-type') || '';
          if (ct.indexOf('application/json') === -1) {
            return resp.text().then(function(t){
              throw new Error('Resposta não JSON.');
            });
          }
          return resp.json();
        })
        .then(function(data){
          if (!data.ok) throw new Error(data.error || 'Falha ao analisar');
          out.innerHTML = '<div class="alert alert-success">Suas respostas foram enviadas com sucesso!</div>';
        })
        .catch(function(e){
          out.innerHTML = '<div class="alert alert-danger">Erro: ' + (e.message || e) + '</div>';
        })
        .finally(function(){
          btn.disabled = false;
        });
      });
    })();
  </script>
</body>
</html>

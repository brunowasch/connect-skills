<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Connect Skills</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/shared/meu-perfil.css">
  <link rel="stylesheet" href="/css/shared/style.css">
  <link rel="icon" type="image/png" href="/img/CONNECT.png?v=2">
</head>
<body>

<main>
  <%- include('../partials/header-empresa') %>
  <%
    const foto = empresa && typeof empresa.foto_perfil === 'string' ? empresa.foto_perfil : null;
    const temFoto = !!(foto && foto.trim() && foto !== 'null' && foto !== 'undefined');
  %>

  <div class="container mt-5">
    <%- include('../partials/flash-messages') %>

    <div class="perfil-card bg-white p-4 rounded shadow-sm">
      <h2 class="mb-4">Meu perfil</h2>

      <div class="d-flex align-items-center perfil-header mb-4">
        <% if (temFoto) { %>
          <img
            src="<%= foto %>"
            class="perfil-foto rounded-circle border border-dark"
            alt="Foto da Empresa"
            width="80"
            height="80"
            style="object-fit: cover;"
            loading="lazy"
            decoding="async"
            referrerpolicy="no-referrer"
          >
        <% } else { %>
          <img
            src="/img/avatar.png"
            class="perfil-foto rounded-circle border border-dark"
            alt="Avatar padrão"
            width="80"
            height="80"
            style="object-fit: cover;"
          >
        <% } %>

        <div class="ms-3">
          <div class="d-flex align-items-center gap-2 mb-1">
            <h4 class="mb-0"><%= empresa.nome_empresa || 'Nome da Empresa' %></h4>
            <button
              class="btn btn-sm"
              data-empresa-id="<%= empresa.id %>"
              title="Copiar link público do perfil da empresa"
              onclick="copiarLinkPerfilPublico(this)">
              <i class="bi bi-link-45deg"></i>
            </button>
          </div>
          <small id="msgCopiado" class="text-success" style="display: none;">Link copiado!</small>

          <p class="mb-1"><%= empresa.descricao || 'Descrição não informada' %></p>
          <p class="mb-1">
            <%
              const partes = [empresa.cidade, empresa.estado, empresa.pais].filter(Boolean);
            %>
            <%= partes.length >= 2 ? partes.join(', ') : 'Localidade não informada' %>
          </p>
          <small class="d-block"><%= empresa.telefone || 'Telefone não informado' %></small>
        </div>

        <a href="/empresa/editar-empresa" class="btn btn-primary btn-sm ms-auto">Editar perfil</a>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-2">
        <h5>Vagas Publicadas</h5>
        <a href="/empresa/publicar-vaga" class="text-decoration-none" title="Publicar vaga">
          <i class="bi bi-plus-square fs-6"></i>
        </a>
      </div>

      <% if (vagasPublicadas && vagasPublicadas.length > 0) { %>
        <div class="list-group">
          <% vagasPublicadas.forEach(vaga => { %>
            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <div>
                <strong><%= vaga.cargo %></strong>
                <div class="small text-muted"><%= vaga.descricao %></div>
              </div>

              <div class="d-flex align-items-center gap-2">
                <!-- <% if (vaga.status === 'aberta') { %>
                  <form action="/empresa/fechar-vaga/<%= vaga.id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-secondary btn-sm">Fechar vaga</button>
                  </form>
                <% } else { %>
                  <button class="btn btn-secondary btn-sm" disabled>Vaga fechada</button>
                <% } %> -->
                <a href="/empresa/editar-vaga/<%= vaga.id %>" class="btn btn-outline-primary btn-sm">
                  <i class="bi bi-pencil-square"></i>
                </a>
                <button
                  type="button"
                  class="btn btn-outline-danger btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#modalExcluirVaga<%= vaga.id %>">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>

            <!-- Modal excluir vaga -->
            <div class="modal fade" id="modalExcluirVaga<%= vaga.id %>" tabindex="-1" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Excluir vaga</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                  </div>
                  <div class="modal-body">
                    Tem certeza que deseja excluir a vaga "<strong><%= vaga.cargo %></strong>"?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                    <form action="/empresa/excluir-vaga/<%= vaga.id %>" method="POST">
                      <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- /Modal -->
          <% }) %>
        </div>
      <% } else { %>
        <div class="alert alert-light text-center">Você ainda não publicou vagas.</div>
      <% } %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>

<script>
  function copiarLinkPerfilPublico(btn) {
    const empresaId = btn.getAttribute('data-empresa-id');
    const url = `${window.location.origin}/empresa/perfil/${empresaId}`;
    navigator.clipboard.writeText(url).then(() => {
      const msg = document.getElementById('msgCopiado');
      if (msg) {
        msg.style.display = 'inline';
        setTimeout(() => (msg.style.display = 'none'), 1500);
      }
    });
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

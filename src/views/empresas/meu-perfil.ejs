<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Perfil da Empresa - Connect Skills</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/meu-perfil.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/img/logo.png">
</head>
<body>

<main>
  <%- include('../partials/header-empresa') %>
 
  <div class="perfil-card bg-white p-4 rounded shadow-sm">
   <h2>Meu perfil</h>
    <div class="d-flex align-items-center perfil-header mb-4">
    <img  src="<%= empresa.fotoPerfil.startsWith('data:image') ? empresa.fotoPerfil : '/' + empresa.fotoPerfil %>"  alt="Logo da Empresa" class="perfil-foto rounded-circle me-3">
      <div>
          <h4><%= empresa.nome %></h4>
          <p><%= empresa.descricao %></p>
          <p><%= empresa.localidade %></p>
          <small>+55 <%= empresa.ddd %> <%= empresa.telefone %></small>
      </div>
      <a href="/empresa/editar-perfil" class="btn btn-primary btn-sm ms-auto">Editar perfil</a>
    </div>

    <div>
      <h5>Vagas Publicadas</h5>
      <ul class="list-group">
        <% if (empresa.vagas && empresa.vagas.length) { %>
          <% empresa.vagas.forEach(vaga => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= vaga.cargo %>
              <a href="/empresa/vaga/<%= vaga.id %>" class="btn btn-outline-primary btn-sm">Ver detalhes</a>
            </li>
          <% }) %>
        <% } else { %>
          <li class="list-group-item">
            <strong><%= vaga.cargo %></strong> — <%= vaga.tipo %><br>
            <small>Áreas: <%= vaga.areas.join(', ') %></small><br>
            <em>Soft Skills: <%= vaga.habilidades.join(', ') %></em><br>
            <span class="text-muted">Publicado em: <%= vaga.data %></span>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

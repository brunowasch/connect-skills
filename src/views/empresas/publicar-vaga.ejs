<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Connect Skills</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/shared/style.css">
  <link rel="icon" type="image/png" href="/img/CONNECT.png?v=2">
</head>
<body>
  <style>
    :root { --nav-h: 0px !important; }
    body#home { padding-top: 0 !important; }
    main#content-main { margin-top: var(--header-h); }
  </style>

  <%- include('../partials/header-empresa') %>
  <%- include('../partials/flash-messages') %>

  <main class="container py-5 mt-4" style="max-width: 800px;">
    <a href="<%= backUrl %>" class="text-decoration-none" title="Voltar">
      <i class="bi bi-x fs-3"></i>
    </a>
    <h2 class="text-center text-primary fw-bold mb-4 mt-4">Publicar vaga</h2>

    <form id="formPublicarVaga" action="/empresa/publicar-vaga" method="POST" enctype="multipart/form-data">
      <div class="row mb-4">
        <div class="col-md-6">
          <label for="cargo" class="form-label">Cargo</label>
          <input type="text" id="cargo" name="cargo" class="form-control" placeholder="Ex: Gerente de produtos" required>
        </div>

        <div class="col-md-6">
          <label for="tipo" class="form-label">Tipo de local de trabalho</label>
          <select id="tipo" name="tipo" class="form-select" required>
            <option value="" disabled selected>Selecione</option>
            <option value="Presencial">Presencial</option>
            <option value="Home_Office">Home Office</option>
            <option value="H_brido">Híbrido</option>
          </select>
        </div>

        <div class="col-md-6 mt-3">
          <label for="escala" class="form-label">Escala de trabalho</label>
          <input type="text" id="escala" name="escala" class="form-control"
                 placeholder="Ex: Segunda a sexta, 8h às 17h" required>
        </div>

        <div class="col-md-6 mt-3 d-flex align-items-end" id="campo-presencial-hibrido">
          <div class="me-3" id="campoPresencial" style="display:none;">
            <label class="form-label small">Dias presenciais</label>
            <input type="number" id="diasPresenciais" name="diasPresenciais"
                   class="form-control form-control-sm" min="0" max="7" style="width:80px;">
          </div>
          <div id="campoHomeOffice" style="display:none;">
            <label class="form-label small">Dias home office</label>
            <input type="number" id="diasHomeOffice" name="diasHomeOffice"
                   class="form-control form-control-sm" min="0" max="7" style="width:80px;">
          </div>
          <div id="erroDias" class="text-danger small ms-3"></div>
        </div>

        <div class="col-md-6 mt-4">
          <label class="form-label">Salário (opcional)</label>
          <div class="input-group">
            <select id="moeda" name="moeda" class="form-select" style="max-width:110px;">
              <% const moedas = { BRL:'R$', USD:'US$', EUR:'€', GBP:'£', JPY:'¥' }; %>
              <% for (let code in moedas) { %>
                <option value="<%= code %>" <%= code==='BRL'?'selected':'' %>><%= moedas[code] %></option>
              <% } %>
            </select>
            <span class="input-group-text" id="simboloMoeda">R$</span>
            <input type="text" id="salario" name="salario" class="form-control" placeholder="0,00" inputmode="decimal">
          </div>
        </div>

        <div class="col-md-6 mt-4">
          <label for="vinculo" class="form-label">Vínculo empregatício</label>
          <select id="vinculo" name="vinculo" class="form-select" required>
            <option value="" disabled selected>Selecione</option>
            <option value="Estagio">Estágio</option>
            <option value="CLT_Tempo_Integral">CLT (tempo integral)</option>
            <option value="CLT_Meio_Periodo">CLT (meio período)</option>
            <option value="Trainee">Trainee</option>
            <option value="Aprendiz">Aprendiz</option>
            <option value="PJ">PJ (Pessoa Jurídica)</option>
            <option value="Freelancer_Autonomo">Freelancer / Autônomo</option>
            <option value="Temporario">Temporário</option>
          </select>
        </div>

        <!-- Descrição da vaga + botão IA -->
        <div class="col-12 mt-4 mb-4">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <label for="descricao" class="form-label mb-0">Descrição da vaga</label>

            <button
              type="button"
              class="btn btn-sm btn-outline-secondary btn-ia-helper"
              data-target="descricao"
              data-label="descrição da vaga"
            >
              <i class="bi bi-stars me-1"></i> IA
            </button>
          </div>

          <textarea
            id="descricao"
            name="descricao"
            class="form-control"
            rows="5"
            placeholder="Diga um pouco sobre a vaga..."
          ></textarea>
        </div>
      </div>

      <div class="mb-4">
        <h5 class="fw-bold text-center">Benefícios oferecidos:</h5>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" id="beneficio1" name="beneficio" value="Vale-refeição">
          <label class="form-check-label" for="beneficio1">Vale-refeição</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" id="beneficio2" name="beneficio" value="Vale-transporte">
          <label class="form-check-label" for="beneficio2">Vale-transporte</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" id="beneficio3" name="beneficio" value="Cesta básica">
          <label class="form-check-label" for="beneficio3">Cesta básica</label>
        </div>
        <div class="mt-3">
          <label for="beneficioOutro" class="form-label">Outro benefício (opcional)</label>
          <input type="text" id="beneficioOutro" name="beneficioOutro" class="form-control" placeholder="Digite outro benefício...">
        </div>
      </div>

      <!-- Pergunta para IA + botão IA -->
      <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center mb-1">
          <label for="pergunta" class="form-label mb-0">Pergunta para IA</label>
          
          <button
            type="button"
            class="btn btn-sm btn-outline-secondary btn-ia-helper"
            data-target="pergunta"
            data-label="perguntas para o candidato"
            data-placeholder="Ex: Crie perguntas técnicas sobre Node.js e React..."
          >
            <i class="bi bi-stars me-1"></i> IA
          </button>
        </div>

        <small class="d-block text-muted">
          Crie perguntas que avaliem o conhecimento...
        </small>

        <textarea
          name="pergunta"
          id="pergunta"
          class="form-control mt-2"
          rows="4"
          placeholder="Digite as perguntas que deseja fazer ao candidato"
          required
        ></textarea>
      </div>

      <!-- Perfil de candidato ideal + botão IA -->
    <div class="mb-4">
      <div class="d-flex justify-content-between align-items-center mb-1">
        <label for="opcao" class="form-label mb-0">Perfil de candidato ideal</label>

        <button
          type="button"
          class="btn btn-sm btn-outline-secondary btn-ia-helper"
          data-target="opcao"
          data-label="perfil do candidato ideal"
          data-placeholder="Ex: Descreva um profissional proativo, com experiência em liderança..."
        >
          <i class="bi bi-stars me-1"></i> IA
        </button>
      </div>

      <small class="d-block text-muted">
        Descreva como seria o candidato ideal para esta vaga... 
      </small>

      <textarea
        name="opcao"
        id="opcao"
        class="form-control mt-2"
        rows="4"
        placeholder="Exemplo: O candidato ideal deve ser..."
        required
      ></textarea>
    </div>

      <div class="mb-4">
        <label for="anexosVaga" class="form-label">Anexos da vaga (PDF, imagens, etc.)</label>
        <div id="anexos-wrapper">
          <input type="file" id="anexosVaga" name="anexosVaga" class="form-control" multiple>
        </div>
        <small class="text-muted d-block mt-1">Tamanho máx. 10MB por arquivo.</small>
        <div id="anexos-hidden" class="d-none"></div>

        <div id="lista-anexos" class="mt-2"></div>
      </div>

      <div class="mb-4">
        <label class="form-label">Links úteis da vaga (opcional)</label>

        <div id="links-container">
          <div class="row g-2 align-items-end mb-2 link-row">
            <div class="col-md-5">
              <input type="text" name="linksTitulo[]" class="form-control" placeholder="Ex: Portfólio da empresa">
            </div>
            <div class="col-md-6">
              <input type="url" name="linksUrl[]" class="form-control" placeholder="https://...">
            </div>
            <div class="col-md-1">
              <button type="button" class="btn btn-outline-danger w-100 btn-remover-link">
                <i class="bi bi-trash"></i>
              </button>
            </div>
          </div>
        </div>

        <button type="button" id="btnAddLink" class="btn btn-outline-secondary btn-sm mt-2">
          <i class="bi bi-plus-lg"></i> Adicionar link
        </button>
      </div>

      <!-- Áreas de atuação + botão IA -->
      <div class="mb-4 position-relative">
        <h5 class="fw-bold text-center">Áreas de atuação da vaga (máx. 3):</h5>
        <button
          type="button"
          class="btn btn-sm btn-outline-secondary position-absolute top-0 end-0"
          data-bs-toggle="modal"
          data-bs-target="#modalAreasIA"
        >
          <i class="bi bi-stars me-1"></i> IA
        </button>
        <div id="area-buttons" class="d-flex flex-wrap gap-2 justify-content-center">
          <% areas.forEach(a => { %>
            <button type="button" class="btn btn-outline-primary area-btn" data-id="<%=a.id%>"><%=a.nome%></button>
          <% }) %>
        </div>

        <div class="mt-3">
          <label class="form-label">Área de interesse não está na lista? (Opcional)</label>
          <input type="text" class="form-control mb-2 nova-area" placeholder="Digite outra área de interesse...">
        </div>

        <input type="hidden" id="areasSelecionadas" name="areasSelecionadas">
        <div id="erroAreas" class="text-danger small mt-1"></div>
      </div>

      <!-- Habilidades + botão IA -->
      <div class="mb-4 position-relative">

        <!-- título centralizado, mas com largura limitada -->
        <div class="mx-auto text-center" style="max-width: 560px;">
          <h5 class="fw-bold mb-3">
            Habilidades comportamentais que mais se encaixam à vaga (máx. 3):
          </h5>
        </div>

        <!-- botão realmente no canto superior direito do bloco -->
        <button
          type="button"
          class="btn btn-sm btn-outline-secondary position-absolute top-0 end-0"
          data-bs-toggle="modal"
          data-bs-target="#modalHabilidadesIA"
        >
          <i class="bi bi-stars me-1"></i> IA
        </button>

        <div class="d-flex flex-wrap gap-2 justify-content-center mt-2">
          <% habilidades.forEach(h => { %>
            <button
              type="button"
              class="btn btn-outline-primary skill-btn"
              data-id="<%= h.id %>"
            >
              <%= h.nome %>
            </button>
          <% }) %>
        </div>

        <input type="hidden" id="habilidadesSelecionadas" name="habilidadesSelecionadas">
        <div id="erroHabilidades" class="text-danger small mt-1"></div>
      </div>

      <div class="text-center mt-4">
        <a href="<%= backUrl %>" class="btn btn-outline-danger px-5 me-2">Cancelar</a>
        <button type="submit" class="btn btn-outline-primary px-5">Continuar</button>
      </div>
    </form>
  </main>


            li.innerHTML = `
              <span><i class="bi bi-paperclip me-2"></i>${file.name}</span>
              <small class="text-muted">${(file.size / 1024).toFixed(1)} KB</small>
            `;
            ul.appendChild(li);
          });
          lista.appendChild(ul);
        }
      });
    })();
  </script>

  <!-- múltiplos inputs de anexo com remoção -->
  <script>
    (function () {
      const wrapper = document.getElementById('anexos-wrapper');
      const hidden  = document.getElementById('anexos-hidden');
      const lista   = document.getElementById('lista-anexos');

      function criaInputNovo() {
        const input = document.createElement('input');
        input.type = 'file';
        input.name = 'anexosVaga';
        input.className = 'form-control';
        input.multiple = true;
        input.addEventListener('change', onChangeInput);
        wrapper.innerHTML = '';
        wrapper.appendChild(input);
        return input;
      }

      function renderLista() {
        lista.innerHTML = '';
        const grupos = hidden.querySelectorAll('input[type="file"][name="anexosVaga"], #anexos-wrapper input[type="file"][name="anexosVaga"]');

        let count = 0;
        grupos.forEach((inp) => {
          const files = Array.from(inp.files || []);
          if (!files.length) return;

          files.forEach((f) => {
            count++;
            const li = document.createElement('div');
            li.className = 'list-group-item d-flex align-items-center justify-content-between border rounded px-3 py-2 mb-2';
            li.innerHTML = `
              <span><i class="bi bi-paperclip me-2"></i>${f.name}</span>
              <div class="d-flex align-items-center gap-2">
                <small class="text-muted">${(f.size / 1024).toFixed(1)} KB</small>
                <button type="button" class="btn btn-sm btn-outline-danger">Remover</button>
              </div>
            `;
            li.querySelector('button').addEventListener('click', () => {
              inp.remove();
              li.remove();
              renderLista();
            });
            lista.appendChild(li);
          });
        });

        if (!count) {
          const vazio = document.createElement('div');
          vazio.className = 'text-muted small';
          vazio.textContent = 'Nenhum arquivo selecionado ainda.';
          lista.appendChild(vazio);
        }
      }

      function onChangeInput(e) {
        const input = e.target;
        if (!input.files || !input.files.length) return;

        hidden.appendChild(input);
        criaInputNovo();
        renderLista();
      }

      const initial = document.querySelector('#anexos-wrapper input[type="file"]');
      initial.addEventListener('change', onChangeInput);
      renderLista();
    })();
  </script>

<script>
  (function() {
    // Função para atualizar os inputs hidden baseada nos botões selecionados
    function atualizarInputsHiddens(containerId, inputId, classeBotao) {
      const container = document.getElementById(containerId);
      const input = document.getElementById(inputId);
      if (!container || !input) return;

      // Mapeia os IDs para um array de números ou strings
      const selecionados = Array.from(container.querySelectorAll(`.${classeBotao}.btn-primary`))
                                .map(btn => btn.getAttribute('data-value'));
      
      // IMPORTANTE: Salva como STRING JSON para o seu Controller conseguir dar o JSON.parse
      input.value = JSON.stringify(selecionados);
    }

    // Listener para Áreas de Atuação
    const areaContainer = document.getElementById('area-container');
    if (areaContainer) {
      areaContainer.addEventListener('click', e => {
        const btn = e.target.closest('.area-btn');
        if (btn) {
          // Toggle de cores do Bootstrap
          btn.classList.toggle('btn-outline-primary');
          btn.classList.toggle('btn-primary');
          
          // Atualiza o input hidden 'areas'
          atualizarInputsHiddens('area-container', 'areas-input', 'area-btn');
        }
      });
    }

    // Listener para Habilidades (Soft Skills)
    const skillContainer = document.getElementById('skill-container');
    if (skillContainer) {
      skillContainer.addEventListener('click', e => {
        const btn = e.target.closest('.skill-btn');
        if (btn) {
          btn.classList.toggle('btn-outline-primary');
          btn.classList.toggle('btn-primary');

          // Atualiza o input hidden 'skills'
          atualizarInputsHiddens('skill-container', 'skills-input', 'skill-btn');
        }
      });
    }
  })();
</script>

<script>
  (function () {
    const modalEl = document.getElementById('iaPromptModal');
    if (!modalEl || !window.bootstrap) return;

    const modal = new bootstrap.Modal(modalEl);
    const promptInput = document.getElementById('iaPromptInput');
    const modalLabel = document.getElementById('iaModalLabel');
    const modalDesc = document.getElementById('iaModalDescription');
    const applyBtn = document.getElementById('iaApplyButton');
    let activeTargetId = '';

    // Helper para selecionar botões baseados no texto
    function selecionarBotoesPorTexto(classeBotao, listaTextosIA) {
      if (!listaTextosIA || !Array.isArray(listaTextosIA)) return;

      const botoes = document.querySelectorAll(classeBotao);
      
      // Normaliza os textos da IA para comparação (remove espaços extras, minúsculas)
      const textosAlvo = listaTextosIA.map(t => t.trim().toLowerCase());

      botoes.forEach(btn => {
        const btnTexto = btn.textContent.trim().toLowerCase();
        const jaSelecionado = btn.classList.contains('btn-primary'); // Assume que btn-primary indica ativo
        const deveSelecionar = textosAlvo.includes(btnTexto);

        // Se a IA sugeriu e não está selecionado -> clica para selecionar
        // Nota: O limite de 3 será controlado pelo seu script externo (publicacaoVagasRequisitos.js)
        if (deveSelecionar && !jaSelecionado) {
          btn.click();
        }
      });
    }

    // Configura o modal
    document.querySelectorAll('.btn-ia-helper').forEach((btn) => {
      btn.addEventListener('click', () => {
        activeTargetId = btn.getAttribute('data-target');
        if (!activeTargetId) return;

        const label = btn.dataset.label || 'conteúdo';
        modalLabel.textContent = `Gerar ${label} com IA`;
        modalDesc.textContent = `Forneça um contexto para gerar ${label}.`;
        promptInput.placeholder = btn.dataset.placeholder || 'Digite um contexto...';
        promptInput.value = '';
        modal.show();
      });
    });

    // Ação ao clicar em "Gerar Texto"
    applyBtn.addEventListener('click', async () => {
      const contexto = promptInput.value.trim();
      if (!contexto) return alert('Digite um contexto.');

      applyBtn.disabled = true;
      applyBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Gerando...';

      try {
        const response = await fetch('/empresa/vaga/gerar-ia', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ shortdesc: contexto })
        });
        
        const data = await response.json();

        if (response.ok && data.sucesso) {
          const targetEl = document.getElementById(activeTargetId);

          if (targetEl) {
            // 1. GERAÇÃO COMPLETA (Botão da Descrição)
            if (activeTargetId === 'descricao') {
              targetEl.value = data.longDescription || '';
              
              // Preenche perguntas e perfil se vazios
              const campoPerguntas = document.getElementById('pergunta');
              const campoPerfil = document.getElementById('opcao');
              
              if (campoPerguntas && !campoPerguntas.value) campoPerguntas.value = data.questions || '';
              if (campoPerfil && !campoPerfil.value) campoPerfil.value = data.bestCandidate || '';

              // --- SELEÇÃO AUTOMÁTICA DE BOTÕES ---
              // Seleciona Áreas de Atuação (requiredSkills)
              if (data.areas && data.areas.length > 0) {
                 // Reseta seleções anteriores (opcional, remova se quiser apenas adicionar)
                 document.querySelectorAll('.area-btn.btn-primary').forEach(b => b.click());
                 // Seleciona as novas
                 selecionarBotoesPorTexto('.area-btn', data.areas);
              }

              // Seleciona Habilidades (behaviouralSkills)
              if (data.skills && data.skills.length > 0) {
                 // Reseta seleções anteriores
                 document.querySelectorAll('.skill-btn.btn-primary').forEach(b => b.click());
                 // Seleciona as novas
                 selecionarBotoesPorTexto('.skill-btn', data.skills);
              }

            } else if (activeTargetId === 'pergunta') {
              targetEl.value = data.questions || '';
            } else if (activeTargetId === 'opcao') {
              targetEl.value = data.bestCandidate || '';
            } else {
              targetEl.value = data.longDescription || '';
            }
          }

          modal.hide();
        } else {
          alert('Erro: ' + (data.erro || 'A IA não retornou dados válidos.'));
        }
      } catch (error) {
        console.error(error);
        alert('Erro de conexão com o servidor local.');
      } finally {
        applyBtn.disabled = false;
        applyBtn.innerHTML = 'Gerar Texto';
      }
    });
  })();
</script>


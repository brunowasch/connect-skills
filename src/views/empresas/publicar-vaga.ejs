        <!-- título centralizado, mas com largura limitada -->
        <div class="mb-4">
          <label class="form-label fw-bold">Habilidades Comportamentais</label>
          <div class="d-flex flex-wrap gap-2" id="skill-container">
            <% softSkills.forEach(skill => { %>

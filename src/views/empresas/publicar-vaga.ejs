<script>
  (function() {
    const inputSalario = document.getElementById('salario');
    const selectMoeda = document.getElementById('moeda');
    const simboloMoeda = document.getElementById('simboloMoeda');

    // 1. Atualiza o símbolo ao lado do input quando muda a moeda
    selectMoeda.addEventListener('change', () => {
      const moedas = { BRL:'R$', USD:'US$', EUR:'€', GBP:'£', JPY:'¥' };
      simboloMoeda.textContent = moedas[selectMoeda.value] || 'R$';
    });

    // 2. Máscara de formatação monetária
    inputSalario.addEventListener('input', function(e) {
      let value = e.target.value.replace(/\D/g, ''); // Remove tudo que não é número
      
      // Converte para centavos (ex: 250000 vira 2500.00)
      value = (value / 100).toFixed(2) + '';
      
      // Aplica a pontuação de milhar e decimal
      value = value.replace(".", ",");
      value = value.replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.");
      
      e.target.value = value;
    });
  })();
</script>


<script>
(function() {
  // Pegamos as áreas enviadas pelo banco
  const todasAsAreas = <%- JSON.stringify(areas || []) %>;
  let selecionadas = [];

  const inputBusca = document.getElementById('busca-area');
  const listaSugestoes = document.getElementById('lista-sugestoes-area');
  const containerTags = document.getElementById('container-tags-areas');
  const hiddenInput = document.getElementById('areas-input');

  // 1. Filtrar e mostrar sugestões ao digitar
  inputBusca.addEventListener('input', function() {
    const termo = this.value.toLowerCase().trim();
    listaSugestoes.innerHTML = '';

    if (termo.length < 1) {
      listaSugestoes.classList.add('d-none');
      return;
    }

    const filtradas = todasAsAreas.filter(area => 
      area.nome.toLowerCase().includes(termo) && 
      !selecionadas.find(s => s.id === area.id)
    );

    if (filtradas.length > 0) {
      filtradas.forEach(area => {
        const li = document.createElement('li');
        li.className = 'list-group-item list-group-item-action cursor-pointer';
        li.textContent = area.nome;
        li.style.cursor = 'pointer';
        li.onclick = () => adicionarArea(area);
        listaSugestoes.appendChild(li);
      });
      listaSugestoes.classList.remove('d-none');
    } else {
      listaSugestoes.classList.add('d-none');
    }
  });

  // 2. Função para adicionar a tag
  window.adicionarArea = function(area) {
      // Impede adicionar a mesma área duas vezes
      if (selecionadas.find(s => s.id === area.id)) return;

      selecionadas.push(area);
      
      // Limpa o campo de busca e esconde as sugestões
      if (inputBusca) inputBusca.value = '';
      if (listaSugestoes) listaSugestoes.classList.add('d-none');
      
      renderizarTags();
    };

  // 3. Função para remover a tag
  window.removerArea = function(id) {
    selecionadas = selecionadas.filter(a => a.id !== id);
    renderizarTags();
  };

  // 4. Renderizar as tags e atualizar o Hidden Input
  function renderizarTags() {
    containerTags.innerHTML = '';
    const ids = selecionadas.map(a => String(a.id));
    
    selecionadas.forEach(area => {
      const tag = document.createElement('div');
      tag.className = 'tag-area';
      tag.innerHTML = `
        <span>${area.nome}</span>
        <button type="button" class="btn-remover-tag" onclick="removerArea(${area.id})">
          <i class="bi bi-x-circle-fill"></i>
        </button>
      `;
      containerTags.appendChild(tag);
    });

    // Atualiza o input que o controller lê
    hiddenInput.value = JSON.stringify(ids);
  }

  // Fecha a lista se clicar fora
  document.addEventListener('click', (e) => {
    if (!inputBusca.contains(e.target)) listaSugestoes.classList.add('d-none');
  });

})();
</script>


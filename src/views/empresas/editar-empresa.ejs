<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Connect Skills</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/shared/style.css">
  <link rel="icon" type="image/png" href="/img/CONNECT.png?v=2">

  <style>
    .perfil-foto { width: 250px; height: 250px; object-fit: cover; }
    @media (max-width: 576px) { .perfil-foto { width: 180px; height: 180px; } }
    .link-row .bi-trash { cursor: pointer; color: #dc3545; }
  </style>
</head>
<body class="bg-light">
<%
  const telDigits = String(empresa.telefone || '').replace(/\D/g, '');
  let _dddVal = '';
  let _numeroVal = '';

  if (telDigits.length >= 10) {
    const digits = telDigits.startsWith('55') ? telDigits.slice(2) : telDigits;
    _dddVal = digits.slice(0, 2);
    const rest = digits.slice(2);

    if (rest.length >= 9) {
      _numeroVal = rest.slice(0, 5) + '-' + rest.slice(5, 9); // celular (9)
    } else if (rest.length >= 8) {
      _numeroVal = rest.slice(0, 4) + '-' + rest.slice(4, 8); // fixo (8)
    } else {
      _numeroVal = rest; // fallback
    }
  }
%>

  <%- include('../partials/header-empresa') %>
  <%- include('../partials/flash-messages') %>

  <main class="container py-5">
    <h2 class="mb-4 mt-3">Editar perfil</h2>

    <form id="formLocalizacao" action="/empresa/editar-empresa" method="POST" enctype="multipart/form-data">
      <div class="row justify-content-center g-4">
        <!-- FOTO / CÂMERA -->
        <div class="col-md-4 text-center">
          <%
            const avatarPadrao = '/img/placeholder-empresa.png';
            const fotoPerfil = (typeof empresa.foto_perfil === 'string' && empresa.foto_perfil.trim() !== '')
              ? empresa.foto_perfil
              : avatarPadrao;
            const temFoto = fotoPerfil !== avatarPadrao;
          %>

          <img id="previewImagem" 
               src="<%= fotoPerfil %>?v=<%= Date.now() %>" 
               alt="Logo da Empresa" 
               class="perfil-foto rounded-circle border border-dark"
               width="100" height="100">

          <div class="mt-2 text-center">
            <button type="button" id="btnAlterarFoto" class="btn btn-primary btn-sm">
              <i class="bi bi-pencil-square fs-6"></i> Alterar foto
            </button>
          </div>

          <div id="botoesFoto" class="d-flex flex-column align-items-center gap-2 mt-3 d-none">
            <div class="d-flex justify-content-center gap-2 flex-wrap">
              <button type="button" class="btn btn-outline-primary btn-sm px-3" onclick="abrirCamera()">
                <i class="bi bi-camera-fill me-1"></i> Câmera
              </button>

              <input type="file" name="novaFoto" id="fotoArquivo" accept="image/*" class="d-none" onchange="previewFoto(this)">
              <label for="fotoArquivo" class="btn btn-outline-secondary btn-sm px-3 mb-0">
                <i class="bi bi-upload me-1"></i> Arquivo
              </label>
            </div>

            <% if (temFoto) { %>
              <button type="submit" name="removerFoto" value="true" class="btn btn-outline-danger btn-sm mt-2"
                      onclick="return confirmarRemocao()">
                <i class="bi bi-trash me-1"></i> Remover foto de perfil
              </button>
            <% } %>
          </div>

          <div id="cameraContainer" class="mt-3 d-none">
            <video id="camera" width="200" autoplay class="rounded"></video>
            <button type="button" class="btn btn-success btn-sm mt-2" onclick="capturarFoto()">Capturar</button>
          </div>
          <canvas id="canvas" class="d-none"></canvas>
          <input type="hidden" name="fotoBase64" id="fotoBase64">
        </div>

        <!-- DADOS -->
        <div class="col-md-8">
          <div class="mb-3">
            <label for="nome" class="form-label">Nome da empresa</label>
            <input type="text" class="form-control" name="nome" id="nome" value="<%= empresa.nome_empresa %>" required>
          </div>

          <div class="mb-3">
            <label for="descricao" class="form-label">Descrição</label>
            <textarea class="form-control" id="descricao" name="descricao" rows="3" required><%= descricao %></textarea>
          </div>

          <!-- LOCALIDADE -->
          <div class="mb-3 position-relative">
            <label for="localidade" class="form-label">Localidade</label>
            <%
              const normalizar = str => str?.normalize('NFD').replace(/[̀-ͯ]/g, '').toLowerCase().trim();
              const partesOriginais = (typeof localidade === 'string' ? localidade.split(',') : [])
                .map(p => p?.trim())
                .filter(p => p && p.toLowerCase() !== 'undefined' && p.toLowerCase() !== 'null');

              const partesUnicas = [];
              const vistos = new Set();

              for (const parte of partesOriginais) {
                const normalizada = normalizar(parte);
                if (!vistos.has(normalizada)) {
                  vistos.add(normalizada);
                  partesUnicas.push(parte);
                }
              }

              const localidadeLimpa = partesUnicas.join(', ');
            %>

            <input
              type="text"
              class="form-control"
              id="localidade"
              name="localidade"
              value="<%= localidadeLimpa %>"
              autocomplete="off"
              required
            >
            <ul id="sugestoesLocalidade" class="list-group position-absolute w-100 mt-1 d-none" style="z-index: 1000;"></ul>
            <div id="erro-localidade" class="invalid-feedback mt-1 d-none"></div>

            <button type="button" id="btnLocalizacao" class="btn btn-outline-primary btn-sm mt-2">
              Detectar minha localização automaticamente
            </button>
            <button type="button" id="btnEditarLocal" class="btn btn-link btn-sm mt-2 d-none">
              <i class="bi bi-pencil-square fs-6"></i>
            </button>
          </div>

          <!-- TELEFONE -->
          <div class="mb-3">
            <div class="row mb-2 g-2">
              <!-- DDI -->
              <div class="col-auto d-flex flex-column align-items-start">
                <label for="ddi" class="form-label">DDI</label>
                <input type="text" class="form-control text-center bg-light" id="ddi" name="ddi"
                value="+55" readonly style="width: 60px;">
              </div>

              <!-- DDD -->
              <div class="col-auto d-flex flex-column align-items-start">
                <label for="ddd" class="form-label">DDD</label>
                <input type="text" class="form-control text-center" name="ddd" id="ddd" maxlength="2"
                  style="width: 60px;" value="<%= _dddVal %>"
                  oninput="this.value = this.value.replace(/[^0-9]/g, '')" required>
              </div>

              <!-- Número -->
              <div class="col-auto d-flex flex-column align-items-start">
                <label for="numero" class="form-label">Número</label>
                <input type="text" class="form-control text-center" name="numero" id="numero" maxlength="11"
                style="width: 180px;" value="<%= _numeroVal %>"
                oninput="formatarNumero(this)" required>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-between">
              <label class="form-label m-0">Links do perfil</label>
            </div>

            <div id="linksContainer" class="mt-2">
              <% const _links = Array.isArray(links) && links.length ? links : [{url:''}]; %>
              <% _links.forEach((link) => { %>
                <div class="row g-2 align-items-end mb-2 link-row">
                  <div class="col-md-7">
                    <label class="form-label small">URL</label>
                    <input name="link_url[]" type="url" class="form-control" maxlength="255"
                           value="<%= link.url || '' %>" placeholder="https://..." />
                  </div>
                  <div class="col-md-1 d-flex align-items-end">
                    <i class="bi bi-trash" onclick="removerLinhaLink(this)" title="Remover"></i>
                  </div>
                </div>
              <% }) %>
            </div>

            <button type="button" class="btn btn-outline-primary btn-sm mt-2" onclick="adicionarLinhaLink()" id="btnAddLink">
              <i class="bi bi-plus-circle me-1"></i> Adicionar link
            </button>
          </div>
        </div>
      </div>
    </form>

    <section class="mt-5">
      <h4 class="m-0 mb-3">Anexos</h4>

      <div class="card p-3 mb-3">
        <h6 class="mb-2">Enviar arquivos</h6>
        <p class="text-muted mb-2">Imagens, PDF, DOC/DOCX (máx. 10MB/arquivo)</p>

        <form action="/empresa/anexos/upload" method="post" enctype="multipart/form-data" class="d-flex gap-2 flex-wrap">
          <input class="form-control" type="file" name="arquivos" multiple />
          <button class="btn btn-primary btn-sm">Enviar</button>
        </form>
      </div>

      <div class="card p-3">
        <div class="d-flex justify-content-between align-items-center">
          <h6 class="mb-0">Meus anexos (<%= anexos?.length || 0 %>)</h6>
        </div>

        <div class="table-responsive mt-2">
          <table class="table align-middle">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Tamanho</th>
                <th>Enviado em</th>
                <th class="text-end">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% if (!anexos || !anexos.length) { %>
                <tr><td colspan="5" class="text-center text-muted">Nenhum anexo enviado ainda.</td></tr>
              <% } else { %>
                <% anexos.forEach(a => { %>
                  <tr>
                    <td class="text-truncate" style="max-width: 360px;"><%= a.nome %></td>
                    <td><code><%= a.mime %></code></td>
                    <td><%= humanFileSize ? humanFileSize(a.tamanho) : ((a.tamanho||0) + ' B') %></td>
                    <td><%= new Date(a.criadoEm).toLocaleString('pt-BR') %></td>
                    <td class="text-end">
                      <a href="/empresa/anexos/<%= a.id %>/abrir" target="_blank" rel="noopener"
                        class="btn btn-sm btn-outline-primary">
                        Abrir
                      </a>
                      <button
                        type="button"
                        class="btn btn-sm btn-outline-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#modalDeleteAnexo"
                        data-action="/empresa/anexos/<%= a.id %>/delete"
                        data-nome="<%= a.nome %>">
                        Excluir
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- MODAL: Excluir Anexo -->
    <div class="modal fade" id="modalDeleteAnexo" tabindex="-1" aria-labelledby="modalDeleteAnexoLabel" aria-hidden="true">
      <div class="modal-dialog">
        <form id="deleteAnexoForm" method="post" class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalDeleteAnexoLabel">Excluir anexo</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            Tem certeza que deseja excluir o anexo <strong id="deleteAnexoNome"></strong>?
            Essa ação não pode ser desfeita.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-danger">Excluir</button>
          </div>
        </form>
      </div>
    </div>

    <!-- MODAL: Excluir Conta -->
    <div class="modal fade" id="modalExcluir" tabindex="-1" aria-labelledby="modalExcluirLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalExcluirLabel">Confirmar Exclusão</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Tem certeza de que deseja excluir sua conta? Esta ação não pode ser desfeita.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <form action="/empresa/excluir-conta" method="POST">
              <button type="submit" class="btn btn-danger">Excluir conta</button>
            </form>
          </div>
        </div>
      </div>
    </div>
      <div class="d-flex gap-3 mt-4">
        <button type="submit" form="formLocalizacao" class="btn btn-primary">Salvar</button>
        <a href="/empresa/meu-perfil" class="btn btn-danger">Cancelar</a>
        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalExcluir">
          <i class="bi bi-trash me-1"></i> Excluir conta
        </button>
      </div>
  </main>

  <%- include('../partials/footer') %>

  <script src="/js/shared/confirmarLocalizacaoEditar-perfil-empresa.js"></script>
  <script src="/js/empresas/previewImagem.js"></script>
  <script src="/js/shared/botoesFotosEditarPerfil.js"></script>
  <script src="/js/empresas/numeroTelefoneEditarEmpresa.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function formatarNumero(input) {
      let num = input.value.replace(/\D/g, '');
      if (num.length > 9) num = num.slice(0, 9);
      if (num.length >= 9) {
        input.value = num.substring(0, 5) + '-' + num.substring(5, 9);
      } else if (num.length >= 5) {
        input.value = num.substring(0, 4) + '-' + num.substring(4, 8);
      } else {
        input.value = num;
      }
    }

    // Preview foto (arquivo)
    function previewFoto(input) {
      const file = input.files[0]; if (!file) return;
      const reader = new FileReader();
      reader.onload = e => {
        const base64 = e.target.result;
        document.getElementById('fotoBase64').value = base64;
        document.getElementById('previewImagem').src = base64;
      };
      reader.readAsDataURL(file);
    }

    // Links dinâmicos (idêntico ao candidato)
    function addRowHtml() {
      return `
        <div class="row g-2 align-items-end mb-2 link-row">
          <div class="col-md-7">
            <label class="form-label small">URL</label>
            <input name="link_url[]" type="url" class="form-control" maxlength="255" placeholder="https://..." />
          </div>
          <div class="col-md-1 d-flex align-items-end">
            <i class="bi bi-trash" onclick="removerLinhaLink(this)" title="Remover"></i>
          </div>
        </div>`;
    }
    function adicionarLinhaLink() {
      const container = document.getElementById('linksContainer');
      const linhas = container.querySelectorAll('.link-row');
      if (linhas.length >= 5) { alert('Você pode adicionar no máximo 5 links.'); return; }
      container.insertAdjacentHTML('beforeend', addRowHtml());
    }
    function removerLinhaLink(el) {
      const container = document.getElementById('linksContainer');
      const linhas = container.querySelectorAll('.link-row');
      const row = el.closest('.link-row');
      if (linhas.length <= 1) {
        row.querySelectorAll('input').forEach(i => i.value = '');
        return;
      }
      row.remove();
    }

    // Modal excluir anexo: preenche form/action dinamicamente
    const modalDelete = document.getElementById('modalDeleteAnexo');
    if (modalDelete) {
      modalDelete.addEventListener('show.bs.modal', function (event) {
        const btn = event.relatedTarget;
        const action = btn.getAttribute('data-action');
        const nome = btn.getAttribute('data-nome');
        document.getElementById('deleteAnexoForm').action = action;
        document.getElementById('deleteAnexoNome').textContent = nome || '';
      });
    }
  </script>
</body>
</html>

  /* CTA BAR */
  .cta-bar { background: #0d6efd; color: #fff; border-radius: 18px; }
  .cta-bar a.btn { background: #fff; color: #0d6efd; border: none; }

  /* Botões Animados */
  .btn-animated {
    position: relative;
    overflow: hidden;
    transition: transform .18s ease,
                box-shadow .18s ease,
                background-color .18s ease,
                color .18s ease;
    will-change: transform;
    border-radius: 12px;
  }
  .btn-animated:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 10px 28px rgba(0,0,0,.18);
  }
  .btn-animated:active {
    transform: translateY(0) scale(.98);
    box-shadow: 0 6px 18px rgba(0,0,0,.14);
  }
  .btn-animated:focus-visible {
    outline: none;
    box-shadow: 0 0 0 4px rgba(255,255,255,.45),
                0 8px 26px rgba(0,0,0,.18);
  }
  .btn-animated .icon-move { transition: transform .18s ease; }
  .btn-animated:hover .icon-move { transform: translateX(3px); }
  .btn-animated .ripple {
    position: absolute;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    background: rgba(255,255,255,.45);
    width: 0; height: 0; opacity: .75;
    animation: ripple .6s ease-out forwards;
  }
  @keyframes ripple { to { width: 320px; height: 320px; opacity: 0; } }

  .client-card {
    background: #ffffff;
    transition: all 0.3s ease;
    border: 1px solid #eef1f6;
  }
  .client-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(16, 24, 40, 0.12);
  }

  @media (prefers-reduced-motion: reduce) {
    .cta-bar .btn-animated,
    .cta-bar .btn-animated .icon-move { transition: none !important; }
    .cta-bar .btn-animated:hover,
    .cta-bar .btn-animated:active {
      transform: none !important; box-shadow: none !important;
    }
  }
</style>

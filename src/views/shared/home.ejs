  .hero {
    background: #fff;
    border-bottom: 1px solid #eef1f6;
    margin-top: 0 !important;
    position: relative;
    z-index: 1;
  }
  .hero .display-6 { font-weight: 800; letter-spacing: -0.02em; }

  .shadow-soft { box-shadow: 0 8px 24px rgba(16, 24, 40, 0.08); }
  .rounded-2xl { border-radius: 1rem; }
  .section-title { font-weight: 800; letter-spacing: -0.01em; }

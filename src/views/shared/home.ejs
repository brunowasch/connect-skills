    <script>
      document.querySelectorAll('.btn-animated').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const rect = btn.getBoundingClientRect();
          const ripple = document.createElement('span');
          ripple.className = 'ripple';
          ripple.style.left = (e.clientX - rect.left) + 'px';
          ripple.style.top  = (e.clientY - rect.top)  + 'px';
          btn.appendChild(ripple);
          setTimeout(() => ripple.remove(), 650);
        }, { passive: true });
      });
    </script>
    <script>
  document.addEventListener('DOMContentLoaded', () => {
    const infoName = document.getElementById('clientInfoName');
    const infoText = document.getElementById('clientInfoText');

    const defaultName = infoName.textContent;
    const defaultText = infoText.textContent;

    document.querySelectorAll('.client-logo-card').forEach(card => {
      const name = card.dataset.clientName;
      const text = card.dataset.clientText;

      const show = () => {
        infoName.textContent = name;
        infoText.textContent = text;
      };

      const reset = () => {
        infoName.textContent = defaultName;
        infoText.textContent = defaultText;
      };

      card.addEventListener('mouseenter', show);
      card.addEventListener('mouseleave', reset);
      card.addEventListener('click', show); // mobile
    });
  });

<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Recuperar Senha - Connect Skills</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/shared/style.css">
  <link rel="stylesheet" href="/css/login/login.css">
  <link rel="icon" type="image/png" href="/img/CONNECT.png?v=2">
</head>
<body>
  <div class="d-flex flex-column min-vh-100">
    <%- include('../partials/flash-messages') %>
    <%- include('../partials/header') %>

    <main class="flex-grow-1 d-flex justify-content-center align-items-center">
      <div class="card shadow p-4 mt-5" style="max-width: 400px; width: 100%;">
        <h3 class="mb-3 text-center">Recuperar senha</h3>

        <% if (erro) { %>
        <div class="alert alert-danger text-center">
            <%= erro %>
            <% if (erro.includes('não encontrado')) { %>
            <br />
            <a href="/auth/cadastro" class="btn btn-link">Clique aqui para se cadastrar</a>
            <% } %>
        </div>
        <% } %>

        <% if (sucesso) { %>
            <div class="alert alert-success text-center"><%= sucesso %></div>
        <% } %>

        <form action="/usuarios/recuperar-senha" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control" name="email" id="email" required placeholder="seuemail@email.com">
          </div>
          <button type="submit" class="btn btn-primary w-100">Enviar link de recuperação</button>
        </form>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </div>
</body>
</html>
